<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.common.dao.MdOutsideCheckinMapper">

    <resultMap type="com.center.medical.datamove.common.bean.model.MdOutsideCheckin" id="MdOutsideCheckinMap">
        <id property="id" column="id"/>
        <result property="patientcode" column="patientcode"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
        <result property="idCharge" column="id_charge"/>
        <result property="status" column="status"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectMdOutsideCheckinVo">
        select id, patientcode, createdate, modifydate, id_charge, status
        from md_outside_checkin
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="MdOutsideCheckinMap">
        <include refid="selectMdOutsideCheckinVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="MdOutsideCheckinMap">
        <include refid="selectMdOutsideCheckinVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

