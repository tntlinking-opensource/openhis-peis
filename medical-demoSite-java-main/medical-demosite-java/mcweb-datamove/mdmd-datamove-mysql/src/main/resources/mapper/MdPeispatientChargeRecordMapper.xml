<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.common.dao.MdPeispatientChargeRecordMapper">

    <resultMap type="com.center.medical.datamove.common.bean.model.MdPeispatientChargeRecord"
               id="MdPeispatientChargeRecordMap">
        <id property="id" column="id"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
        <result property="patientcode" column="patientcode"/>
        <result property="method" column="method"/>
        <result property="version" column="version"/>
        <result property="moneyamount" column="moneyamount"/>
        <result property="moneyamountpaid" column="moneyamountpaid"/>
        <result property="moneyamountOld" column="moneyamount_old"/>
        <result property="moneyamountpaidOld" column="moneyamountpaid_old"/>
        <result property="username" column="username"/>
        <result property="note" column="note"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectMdPeispatientChargeRecordVo">
        select id,
               createdate,
               modifydate,
               patientcode,
               method,
               version,
               moneyamount,
               moneyamountpaid,
               moneyamount_old,
               moneyamountpaid_old,
               username,
               note
        from md_peispatient_charge_record
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="MdPeispatientChargeRecordMap">
        <include refid="selectMdPeispatientChargeRecordVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="MdPeispatientChargeRecordMap">
        <include refid="selectMdPeispatientChargeRecordVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

