<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.common.dao.MdGroupReviewNoticePatientMapper">

    <resultMap type="com.center.medical.datamove.common.bean.model.MdGroupReviewNoticePatient"
               id="MdGroupReviewNoticePatientMap">
        <id property="id" column="id"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
        <result property="mainId" column="main_id"/>
        <result property="patientcode" column="patientcode"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectMdGroupReviewNoticePatientVo">
        select id, createdate, modifydate, main_id, patientcode
        from md_group_review_notice_patient
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="MdGroupReviewNoticePatientMap">
        <include refid="selectMdGroupReviewNoticePatientVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="MdGroupReviewNoticePatientMap">
        <include refid="selectMdGroupReviewNoticePatientVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

