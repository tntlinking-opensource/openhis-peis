<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.common.dao.MdSortexamLimitMapper">

    <resultMap type="com.center.medical.datamove.common.bean.model.MdSortexamLimit" id="MdSortexamLimitMap">
        <id property="id" column="id"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
        <result property="cid" column="cid"/>
        <result property="sortDate" column="sort_date"/>
        <result property="vip" column="vip"/>
        <result property="vvip" column="vvip"/>
        <result property="am" column="am"/>
        <result property="pm" column="pm"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectMdSortexamLimitVo">
        select id,
               createdate,
               modifydate,
               cid,
               sort_date,
               vip,
               vvip,
               am,
               pm
        from md_sortexam_limit
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="MdSortexamLimitMap">
        <include refid="selectMdSortexamLimitVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="MdSortexamLimitMap">
        <include refid="selectMdSortexamLimitVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

