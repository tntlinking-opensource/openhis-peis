<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.common.dao.MdDrugAndFzxMapper">

    <resultMap type="com.center.medical.datamove.common.bean.model.MdDrugAndFzx" id="MdDrugAndFzxMap">
        <id property="id" column="id"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
        <result property="drugId" column="drug_id"/>
        <result property="fzxId" column="fzx_id"/>
        <result property="tbzt" column="tbzt"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectMdDrugAndFzxVo">
        select id, createdate, modifydate, drug_id, fzx_id, tbzt
        from md_drug_and_fzx
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="MdDrugAndFzxMap">
        <include refid="selectMdDrugAndFzxVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="MdDrugAndFzxMap">
        <include refid="selectMdDrugAndFzxVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

