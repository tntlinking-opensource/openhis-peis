<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.common.dao.MdFamilyCardChargeMapper">

    <resultMap type="com.center.medical.datamove.common.bean.model.MdFamilyCardCharge" id="MdFamilyCardChargeMap">
        <id property="id" column="id"/>
        <result property="modifydate" column="modifydate"/>
        <result property="createdate" column="createdate"/>
        <result property="cardno" column="cardno"/>
        <result property="chargerUsername" column="charger_username"/>
        <result property="chargeTime" column="charge_time"/>
        <result property="note" column="note"/>
        <result property="idPayway" column="id_payway"/>
        <result property="money" column="money"/>
        <result property="type" column="type"/>
        <result property="jf" column="jf"/>
        <result property="startJf" column="start_jf"/>
        <result property="endJf" column="end_jf"/>
        <result property="startMoney" column="start_money"/>
        <result property="endMoney" column="end_money"/>
        <result property="patientcode" column="patientcode"/>
        <result property="consumetype" column="consumetype"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectMdFamilyCardChargeVo">
        select id,
               modifydate,
               createdate,
               cardno,
               charger_username,
               charge_time,
               note,
               id_payway,
               money,
               type,
               jf,
               start_jf,
               end_jf,
               start_money,
               end_money,
               patientcode,
               consumetype
        from md_family_card_charge
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="MdFamilyCardChargeMap">
        <include refid="selectMdFamilyCardChargeVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="MdFamilyCardChargeMap">
        <include refid="selectMdFamilyCardChargeVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

