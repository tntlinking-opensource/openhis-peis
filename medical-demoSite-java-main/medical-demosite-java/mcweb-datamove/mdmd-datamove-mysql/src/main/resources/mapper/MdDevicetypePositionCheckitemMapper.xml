<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.common.dao.MdDevicetypePositionCheckitemMapper">

    <resultMap type="com.center.medical.datamove.common.bean.model.MdDevicetypePositionCheckitem"
               id="MdDevicetypePositionCheckitemMap">
        <id property="id" column="id"/>
        <result property="devicetypename" column="devicetypename"/>
        <result property="studypositionname" column="studypositionname"/>
        <result property="checkitemnname" column="checkitemnname"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectMdDevicetypePositionCheckitemVo">
        select id, devicetypename, studypositionname, checkitemnname
        from md_devicetype_position_checkitem
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="MdDevicetypePositionCheckitemMap">
        <include refid="selectMdDevicetypePositionCheckitemVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="MdDevicetypePositionCheckitemMap">
        <include refid="selectMdDevicetypePositionCheckitemVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

