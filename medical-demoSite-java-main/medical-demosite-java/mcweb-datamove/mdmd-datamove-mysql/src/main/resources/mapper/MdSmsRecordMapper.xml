<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.common.dao.MdSmsRecordMapper">

    <resultMap type="com.center.medical.datamove.common.bean.model.MdSmsRecord" id="MdSmsRecordMap">
        <id property="id" column="id"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
        <result property="idTemplate" column="id_template"/>
        <result property="notifyType" column="notify_type"/>
        <result property="notifyResult" column="notify_result"/>
        <result property="notifyTime" column="notify_time"/>
        <result property="creater" column="creater"/>
        <result property="isImmediately" column="is_immediately"/>
        <result property="patientcode" column="patientcode"/>
        <result property="notifyContent" column="notify_content"/>
        <result property="archiveId" column="archive_id"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectMdSmsRecordVo">
        select id,
               createdate,
               modifydate,
               id_template,
               notify_type,
               notify_result,
               notify_time,
               creater,
               is_immediately,
               patientcode,
               notify_content,
               archive_id
        from md_sms_record
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="MdSmsRecordMap">
        <include refid="selectMdSmsRecordVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="MdSmsRecordMap">
        <include refid="selectMdSmsRecordVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

