<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.common.dao.MdOutsideChargeItemMapper">

    <resultMap type="com.center.medical.datamove.common.bean.model.MdOutsideChargeItem" id="MdOutsideChargeItemMap">
        <id property="id" column="id"/>
        <result property="patientcode" column="patientcode"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
        <result property="idCharge" column="id_charge"/>
        <result property="idDepart" column="id_depart"/>
        <result property="isDelete" column="is_delete"/>
        <result property="wsjgId" column="wsjg_id"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectMdOutsideChargeItemVo">
        select id,
               patientcode,
               createdate,
               modifydate,
               id_charge,
               id_depart,
               is_delete,
               wsjg_id
        from md_outside_charge_item
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="MdOutsideChargeItemMap">
        <include refid="selectMdOutsideChargeItemVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="MdOutsideChargeItemMap">
        <include refid="selectMdOutsideChargeItemVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

