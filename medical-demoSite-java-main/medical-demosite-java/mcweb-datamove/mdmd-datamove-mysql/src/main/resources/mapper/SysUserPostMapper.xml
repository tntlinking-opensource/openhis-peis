<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.common.dao.SysUserPostMapper">

    <resultMap type="com.center.medical.datamove.common.bean.model.SysUserPost" id="SysUserPostMap">
        <id property="userId" column="user_id"/>
        <result property="postId" column="post_id"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectSysUserPostVo">
        select user_id, post_id
        from sys_user_post
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="SysUserPostMap">
        <include refid="selectSysUserPostVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="SysUserPostMap">
        <include refid="selectSysUserPostVo"/>
        <where>
            userId = #{id}
        </where>
    </select>

</mapper>

