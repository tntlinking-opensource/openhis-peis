<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.common.dao.MdOccupationDiseastClassMapper">

    <resultMap type="com.center.medical.datamove.common.bean.model.MdOccupationDiseastClass"
               id="MdOccupationDiseastClassMap">
        <id property="id" column="id"/>
        <result property="occupationDiseastClassCode" column="occupation_diseast_class_code"/>
        <result property="occupationDiseastClassName" column="occupation_diseast_class_name"/>
        <result property="inputCode" column="input_code"/>
        <result property="dbUser" column="db_user"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
        <result property="isDelete" column="is_delete"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectMdOccupationDiseastClassVo">
        select id,
               occupation_diseast_class_code,
               occupation_diseast_class_name,
               input_code,
               db_user,
               createdate,
               modifydate,
               is_delete
        from md_occupation_diseast_class
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="MdOccupationDiseastClassMap">
        <include refid="selectMdOccupationDiseastClassVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="MdOccupationDiseastClassMap">
        <include refid="selectMdOccupationDiseastClassVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

