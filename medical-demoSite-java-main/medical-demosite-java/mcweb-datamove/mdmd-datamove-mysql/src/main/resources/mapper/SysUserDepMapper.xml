<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.common.dao.SysUserDepMapper">

    <resultMap type="com.center.medical.datamove.common.bean.model.SysUserDep" id="SysUserDepMap">
        <id property="id" column="id"/>
        <result property="depId" column="dep_id"/>
        <result property="userId" column="user_id"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectSysUserDepVo">
        select id, dep_id, user_id, createdate, modifydate
        from sys_user_dep
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="SysUserDepMap">
        <include refid="selectSysUserDepVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="SysUserDepMap">
        <include refid="selectSysUserDepVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

