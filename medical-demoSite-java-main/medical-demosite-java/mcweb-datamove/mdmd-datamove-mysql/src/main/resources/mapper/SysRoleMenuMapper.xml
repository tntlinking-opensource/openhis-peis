<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.common.dao.SysRoleMenuMapper">

    <resultMap type="com.center.medical.datamove.common.bean.model.SysRoleMenu" id="SysRoleMenuMap">
        <id property="roleId" column="role_id"/>
        <result property="menuId" column="menu_id"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectSysRoleMenuVo">
        select role_id, menu_id
        from sys_role_menu
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="SysRoleMenuMap">
        <include refid="selectSysRoleMenuVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="SysRoleMenuMap">
        <include refid="selectSysRoleMenuVo"/>
        <where>
            roleId = #{id}
        </where>
    </select>

</mapper>

