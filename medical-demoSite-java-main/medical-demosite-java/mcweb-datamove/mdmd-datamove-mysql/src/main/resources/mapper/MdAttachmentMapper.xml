<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.common.dao.MdAttachmentMapper">

    <resultMap type="com.center.medical.datamove.common.bean.model.MdAttachment" id="MdAttachmentMap">
        <id property="id" column="id"/>
        <result property="fileSort" column="file_sort"/>
        <result property="filePath" column="file_path"/>
        <result property="fileSize" column="file_size"/>
        <result property="fileType" column="file_type"/>
        <result property="bw" column="bw"/>
        <result property="dcmPath" column="dcm_path"/>
        <result property="memo" column="memo"/>
        <result property="configId" column="config_id"/>
        <result property="inReport" column="in_report"/>
        <result property="createId" column="create_id"/>
        <result property="patientcode" column="patientcode"/>
        <result property="shortCode" column="short_code"/>
        <result property="feeItemId" column="fee_item_id"/>
        <result property="pacsFeeItemId" column="pacs_fee_item_id"/>
        <result property="depId" column="dep_id"/>
        <result property="branchId" column="branch_id"/>
        <result property="type" column="type"/>
        <result property="fileGroupId" column="file_group_id"/>
        <result property="status" column="status"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectMdAttachmentVo">
        select id,
               file_sort,
               file_path,
               file_size,
               file_type,
               bw,
               dcm_path,
               memo,
               config_id,
               in_report,
               create_id,
               patientcode,
               short_code,
               fee_item_id,
               pacs_fee_item_id,
               dep_id,
               branch_id,
               type,
               file_group_id,
               status,
               createdate,
               modifydate
        from md_attachment
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="MdAttachmentMap">
        <include refid="selectMdAttachmentVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="MdAttachmentMap">
        <include refid="selectMdAttachmentVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

