<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.common.dao.MdPeispatientChargeOtherMapper">

    <resultMap type="com.center.medical.datamove.common.bean.model.MdPeispatientChargeOther"
               id="MdPeispatientChargeOtherMap">
        <id property="id" column="id"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
        <result property="orderNo" column="order_no"/>
        <result property="transactionNo" column="transaction_no"/>
        <result property="patientcode" column="patientcode"/>
        <result property="feeName" column="fee_name"/>
        <result property="price" column="price"/>
        <result property="paidPrice" column="paid_price"/>
        <result property="payStatus" column="pay_status"/>
        <result property="orderType" column="order_type"/>
        <result property="chageTime" column="chage_time"/>
        <result property="chargeId" column="charge_id"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectMdPeispatientChargeOtherVo">
        select id,
               createdate,
               modifydate,
               order_no,
               transaction_no,
               patientcode,
               fee_name,
               price,
               paid_price,
               pay_status,
               order_type,
               chage_time,
               charge_id
        from md_peispatient_charge_other
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="MdPeispatientChargeOtherMap">
        <include refid="selectMdPeispatientChargeOtherVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="MdPeispatientChargeOtherMap">
        <include refid="selectMdPeispatientChargeOtherVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

