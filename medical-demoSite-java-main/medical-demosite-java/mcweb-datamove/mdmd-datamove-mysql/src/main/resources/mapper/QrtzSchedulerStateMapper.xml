<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.common.dao.QrtzSchedulerStateMapper">

    <resultMap type="com.center.medical.datamove.common.bean.model.QrtzSchedulerState" id="QrtzSchedulerStateMap">
        <id property="schedName" column="sched_name"/>
        <result property="instanceName" column="instance_name"/>
        <result property="lastCheckinTime" column="last_checkin_time"/>
        <result property="checkinInterval" column="checkin_interval"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectQrtzSchedulerStateVo">
        select sched_name, instance_name, last_checkin_time, checkin_interval
        from qrtz_scheduler_state
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="QrtzSchedulerStateMap">
        <include refid="selectQrtzSchedulerStateVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="QrtzSchedulerStateMap">
        <include refid="selectQrtzSchedulerStateVo"/>
        <where>
            schedName = #{id}
        </where>
    </select>

</mapper>

