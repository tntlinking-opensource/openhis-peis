<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.common.dao.WsRoleResourceMapper">

    <resultMap type="com.center.medical.datamove.common.bean.model.WsRoleResource" id="WsRoleResourceMap">
        <id property="roleId" column="role_id"/>
        <result property="resourceId" column="resource_id"/>
        <result property="id" column="id"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectWsRoleResourceVo">
        select role_id, resource_id, id, createdate, modifydate
        from ws_role_resource
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="WsRoleResourceMap">
        <include refid="selectWsRoleResourceVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="WsRoleResourceMap">
        <include refid="selectWsRoleResourceVo"/>
        <where>
            roleId = #{id}
        </where>
    </select>

</mapper>

