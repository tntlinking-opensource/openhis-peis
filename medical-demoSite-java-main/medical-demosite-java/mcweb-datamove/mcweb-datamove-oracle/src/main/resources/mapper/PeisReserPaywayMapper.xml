<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.oracle.dao.PeisReserPaywayMapper">

    <resultMap type="com.center.medical.datamove.oracle.bean.model.PeisReserPayway" id="PeisReserPaywayMap">
        <id property="id" column="ID"/>
        <result property="idCharge" column="ID_CHARGE"/>
        <result property="moneyamountpaid" column="MONEYAMOUNTPAID"/>
        <result property="moneyamountpaiddate" column="MONEYAMOUNTPAIDDATE"/>
        <result property="idFeecharger" column="ID_FEECHARGER"/>
        <result property="idPayway" column="ID_PAYWAY"/>
        <result property="createdate" column="CREATEDATE"/>
        <result property="modifydate" column="MODIFYDATE"/>
        <result property="note" column="NOTE"/>
        <result property="cardno" column="CARDNO"/>
        <result property="isCharged" column="IS_CHARGED"/>
        <result property="billingAccount" column="BILLING_ACCOUNT"/>
        <result property="isReceipt" column="IS_RECEIPT"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectPeisReserPaywayVo">
        select ID,
               ID_CHARGE,
               MONEYAMOUNTPAID,
               MONEYAMOUNTPAIDDATE,
               ID_FEECHARGER,
               ID_PAYWAY,
               CREATEDATE,
               MODIFYDATE,
               NOTE,
               CARDNO,
               IS_CHARGED,
               BILLING_ACCOUNT,
               IS_RECEIPT
        from PEIS_RESER_PAYWAY
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="PeisReserPaywayMap">
        <include refid="selectPeisReserPaywayVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="PeisReserPaywayMap">
        <include refid="selectPeisReserPaywayVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

