<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.oracle.dao.QxWsDepartmentMapper">

    <resultMap type="com.center.medical.datamove.oracle.bean.model.QxWsDepartment" id="QxWsDepartmentMap">
        <id property="id" column="ID"/>
        <result property="name" column="NAME"/>
        <result property="description" column="DESCRIPTION"/>
        <result property="parent" column="PARENT"/>
        <result property="createdate" column="CREATEDATE"/>
        <result property="modifydate" column="MODIFYDATE"/>
        <result property="isDelete" column="IS_DELETE"/>
        <result property="isFunction" column="IS_FUNCTION"/>
        <result property="inputCode" column="INPUT_CODE"/>
        <result property="xh" column="XH"/>
        <result property="sjbggs" column="SJBGGS"/>
        <result property="jcdd" column="JCDD"/>
        <result property="jklx" column="JKLX"/>
        <result property="ksh" column="KSH"/>
        <result property="imgpath" column="IMGPATH"/>
        <result property="reportPathHealth" column="REPORT_PATH_HEALTH"/>
        <result property="reportPathDisease" column="REPORT_PATH_DISEASE"/>
        <result property="addPicBefore" column="ADD_PIC_BEFORE"/>
        <result property="reportSort" column="REPORT_SORT"/>
        <result property="dydXh" column="DYD_XH"/>
        <result property="address" column="ADDRESS"/>
        <result property="house" column="HOUSE"/>
        <result property="payment" column="PAYMENT"/>
        <result property="enddate" column="ENDDATE"/>
        <result property="flag" column="FLAG"/>
        <result property="flagId" column="FLAG_ID"/>
        <result property="dpcode" column="DPCODE"/>
        <result property="dplevel" column="DPLEVEL"/>
        <result property="customerId" column="CUSTOMER_ID"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectQxWsDepartmentVo">
        select ID,
               NAME,
               DESCRIPTION,
               PARENT,
               CREATEDATE,
               MODIFYDATE,
               IS_DELETE,
               IS_FUNCTION,
               INPUT_CODE,
               XH,
               SJBGGS,
               JCDD,
               JKLX,
               KSH,
               IMGPATH,
               REPORT_PATH_HEALTH,
               REPORT_PATH_DISEASE,
               ADD_PIC_BEFORE,
               REPORT_SORT,
               DYD_XH,
               ADDRESS,
               HOUSE,
               PAYMENT,
               ENDDATE,
               FLAG,
               FLAG_ID,
               DPCODE,
               DPLEVEL,
               CUSTOMER_ID
        from QX_WS_DEPARTMENT
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="QxWsDepartmentMap">
        <include refid="selectQxWsDepartmentVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="QxWsDepartmentMap">
        <include refid="selectQxWsDepartmentVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

