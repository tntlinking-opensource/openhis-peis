<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.oracle.dao.AppNoticeMapper">

    <resultMap type="com.center.medical.datamove.oracle.bean.model.AppNotice" id="AppNoticeMap">
        <id property="id" column="ID"/>
        <result property="createdate" column="CREATEDATE"/>
        <result property="modifydate" column="MODIFYDATE"/>
        <result property="title" column="TITLE"/>
        <result property="content" column="CONTENT"/>
        <result property="publishTime" column="PUBLISH_TIME"/>
        <result property="isDelete" column="IS_DELETE"/>
        <result property="creator" column="CREATOR"/>
        <result property="modifier" column="MODIFIER"/>
        <result property="cid" column="CID"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectAppNoticeVo">
        select ID,
               CREATEDATE,
               MODIFYDATE,
               TITLE,
               CONTENT,
               PUBLISH_TIME,
               IS_DELETE,
               CREATOR,
               MODIFIER,
               CID
        from APP_NOTICE
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="AppNoticeMap">
        <include refid="selectAppNoticeVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="AppNoticeMap">
        <include refid="selectAppNoticeVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

