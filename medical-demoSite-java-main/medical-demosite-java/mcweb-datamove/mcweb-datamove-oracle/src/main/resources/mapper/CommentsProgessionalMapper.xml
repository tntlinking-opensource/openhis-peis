<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.oracle.dao.CommentsProgessionalMapper">

    <resultMap type="com.center.medical.datamove.oracle.bean.model.CommentsProgessional" id="CommentsProgessionalMap">
        <id property="id" column="ID"/>
        <result property="patientcode" column="PATIENTCODE"/>
        <result property="progessionalId" column="PROGESSIONAL_ID"/>
        <result property="createdate" column="CREATEDATE"/>
        <result property="modifydate" column="MODIFYDATE"/>
        <result property="isDelete" column="IS_DELETE"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectCommentsProgessionalVo">
        select ID, PATIENTCODE, PROGESSIONAL_ID, CREATEDATE, MODIFYDATE, IS_DELETE
        from COMMENTS_PROGESSIONAL
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="CommentsProgessionalMap">
        <include refid="selectCommentsProgessionalVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="CommentsProgessionalMap">
        <include refid="selectCommentsProgessionalVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

