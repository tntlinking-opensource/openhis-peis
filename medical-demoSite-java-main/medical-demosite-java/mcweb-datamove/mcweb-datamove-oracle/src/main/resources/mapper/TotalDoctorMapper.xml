<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.oracle.dao.TotalDoctorMapper">

    <resultMap type="com.center.medical.datamove.oracle.bean.model.TotalDoctor" id="TotalDoctorMap">
        <id property="id" column="ID"/>
        <result property="createdate" column="CREATEDATE"/>
        <result property="modifydate" column="MODIFYDATE"/>
        <result property="totalId" column="TOTAL_ID"/>
        <result property="userId" column="USER_ID"/>
        <result property="type" column="TYPE"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectTotalDoctorVo">
        select ID, CREATEDATE, MODIFYDATE, TOTAL_ID, USER_ID, TYPE
        from TOTAL_DOCTOR
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="TotalDoctorMap">
        <include refid="selectTotalDoctorVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="TotalDoctorMap">
        <include refid="selectTotalDoctorVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

