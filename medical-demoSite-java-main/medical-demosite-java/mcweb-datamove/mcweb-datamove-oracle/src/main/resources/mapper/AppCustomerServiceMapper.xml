<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.oracle.dao.AppCustomerServiceMapper">

    <resultMap type="com.center.medical.datamove.oracle.bean.model.AppCustomerService" id="AppCustomerServiceMap">
        <id property="id" column="ID"/>
        <result property="createdate" column="CREATEDATE"/>
        <result property="modifydate" column="MODIFYDATE"/>
        <result property="mobile" column="MOBILE"/>
        <result property="name" column="NAME"/>
        <result property="nickName" column="NICK_NAME"/>
        <result property="email" column="EMAIL"/>
        <result property="depId" column="DEP_ID"/>
        <result property="depName" column="DEP_NAME"/>
        <result property="userId" column="USER_ID"/>
        <result property="qxUserId" column="QX_USER_ID"/>
        <result property="picture" column="PICTURE"/>
        <result property="isDelete" column="IS_DELETE"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectAppCustomerServiceVo">
        select ID,
               CREATEDATE,
               MODIFYDATE,
               MOBILE,
               NAME,
               NICK_NAME,
               EMAIL,
               DEP_ID,
               DEP_NAME,
               USER_ID,
               QX_USER_ID,
               PICTURE,
               IS_DELETE
        from APP_CUSTOMER_SERVICE
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="AppCustomerServiceMap">
        <include refid="selectAppCustomerServiceVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="AppCustomerServiceMap">
        <include refid="selectAppCustomerServiceVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

