<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.oracle.dao.BaseGuideMealMapper">

    <resultMap type="com.center.medical.datamove.oracle.bean.model.BaseGuideMeal" id="BaseGuideMealMap">
        <id property="id" column="ID"/>
        <result property="type" column="TYPE"/>
        <result property="name" column="NAME"/>
        <result property="value" column="VALUE"/>
        <result property="content" column="CONTENT"/>
        <result property="createdate" column="CREATEDATE"/>
        <result property="modifydate" column="MODIFYDATE"/>
        <result property="fzx" column="FZX"/>
        <result property="remark" column="REMARK"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectBaseGuideMealVo">
        select ID,
               TYPE,
               NAME,
               VALUE,
               CONTENT,
               CREATEDATE,
               MODIFYDATE,
               FZX,
               REMARK
        from BASE_GUIDE_MEAL
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="BaseGuideMealMap">
        <include refid="selectBaseGuideMealVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="BaseGuideMealMap">
        <include refid="selectBaseGuideMealVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

