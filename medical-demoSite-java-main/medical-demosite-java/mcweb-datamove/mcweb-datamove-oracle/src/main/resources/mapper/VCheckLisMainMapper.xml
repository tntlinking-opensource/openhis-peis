<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.oracle.dao.VCheckLisMainMapper">

    <resultMap type="com.center.medical.datamove.oracle.bean.model.VCheckLisMain" id="VCheckLisMainMap">
        <id property="checkreqid" column="CheckReqID"/>
        <result property="checkregno" column="CheckRegNo"/>
        <result property="checkregdate" column="CheckRegDate"/>
        <result property="reportno" column="ReportNo"/>
        <result property="reprtdate" column="ReprtDate"/>
        <result property="reportdoctorcode" column="ReportDoctorCode"/>
        <result property="reprtdoctorname" column="ReprtDoctorName"/>
        <result property="patientname" column="PatientName"/>
        <result property="sex" column="Sex"/>
        <result property="itemcode" column="ItemCode"/>
        <result property="itemname" column="ItemName"/>
        <result property="departname" column="DepartName"/>
        <result property="doctorname" column="DoctorName"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectVCheckLisMainVo">
        select CheckReqID,
               CheckRegNo,
               CheckRegDate,
               ReportNo,
               ReprtDate,
               ReportDoctorCode,
               ReprtDoctorName,
               PatientName,
               Sex,
               ItemCode,
               ItemName,
               DepartName,
               DoctorName
        from v_Check_LIS_Main
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="VCheckLisMainMap">
        <include refid="selectVCheckLisMainVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="VCheckLisMainMap">
        <include refid="selectVCheckLisMainVo"/>
        <where>
            checkreqid = #{id}
        </where>
    </select>

</mapper>

