<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.oracle.dao.UserauthcodeMapper">

    <resultMap type="com.center.medical.datamove.oracle.bean.model.Userauthcode" id="UserauthcodeMap">
        <id property="id" column="ID"/>
        <result property="createdate" column="CREATEDATE"/>
        <result property="modifydate" column="MODIFYDATE"/>
        <result property="userId" column="USER_ID"/>
        <result property="authCode" column="AUTH_CODE"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectUserauthcodeVo">
        select ID, CREATEDATE, MODIFYDATE, USER_ID, AUTH_CODE
        from USERAUTHCODE
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="UserauthcodeMap">
        <include refid="selectUserauthcodeVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="UserauthcodeMap">
        <include refid="selectUserauthcodeVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

