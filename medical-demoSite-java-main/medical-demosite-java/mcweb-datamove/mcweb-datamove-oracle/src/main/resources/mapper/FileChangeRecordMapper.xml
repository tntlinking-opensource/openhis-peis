<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.oracle.dao.FileChangeRecordMapper">

    <resultMap type="com.center.medical.datamove.oracle.bean.model.FileChangeRecord" id="FileChangeRecordMap">
        <id property="id" column="ID"/>
        <result property="createdate" column="CREATEDATE"/>
        <result property="modifydate" column="MODIFYDATE"/>
        <result property="status" column="STATUS"/>
        <result property="dir" column="DIR"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectFileChangeRecordVo">
        select CREATEDATE, MODIFYDATE, ID, STATUS, DIR
        from FILE_CHANGE_RECORD
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="FileChangeRecordMap">
        <include refid="selectFileChangeRecordVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="FileChangeRecordMap">
        <include refid="selectFileChangeRecordVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

