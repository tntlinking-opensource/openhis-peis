<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.oracle.dao.TjbbGmdMapper">

    <resultMap type="com.center.medical.datamove.oracle.bean.model.TjbbGmd" id="TjbbGmdMap">
        <id property="id" column="ID"/>
        <result property="patientcode" column="PATIENTCODE"/>
        <result property="xh" column="XH"/>
        <result property="gmd" column="GMD"/>
        <result property="ckfw" column="CKFW"/>
        <result property="valueMin" column="VALUE_MIN"/>
        <result property="valueMax" column="VALUE_MAX"/>
        <result property="createdate" column="CREATEDATE"/>
        <result property="modifydate" column="MODIFYDATE"/>
        <result property="createId" column="CREATE_ID"/>
        <result property="modifyId" column="MODIFY_ID"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectTjbbGmdVo">
        select ID,
               PATIENTCODE,
               XH,
               GMD,
               CKFW,
               VALUE_MIN,
               VALUE_MAX,
               CREATEDATE,
               MODIFYDATE,
               CREATE_ID,
               MODIFY_ID
        from TJBB_GMD
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="TjbbGmdMap">
        <include refid="selectTjbbGmdVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="TjbbGmdMap">
        <include refid="selectTjbbGmdVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

