<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.oracle.dao.ReservationReturnVisitMapper">

    <resultMap type="com.center.medical.datamove.oracle.bean.model.ReservationReturnVisit"
               id="ReservationReturnVisitMap">
        <id property="id" column="ID"/>
        <result property="createdate" column="CREATEDATE"/>
        <result property="modifydate" column="MODIFYDATE"/>
        <result property="patientId" column="PATIENT_ID"/>
        <result property="visitId" column="VISIT_ID"/>
        <result property="visitTime" column="VISIT_TIME"/>
        <result property="visitNote" column="VISIT_NOTE"/>
        <result property="sflj" column="SFLJ"/>
        <result property="ljsj" column="LJSJ"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectReservationReturnVisitVo">
        select ID,
               CREATEDATE,
               MODIFYDATE,
               PATIENT_ID,
               VISIT_ID,
               VISIT_TIME,
               VISIT_NOTE,
               SFLJ,
               LJSJ
        from RESERVATION_RETURN_VISIT
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="ReservationReturnVisitMap">
        <include refid="selectReservationReturnVisitVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="ReservationReturnVisitMap">
        <include refid="selectReservationReturnVisitVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

