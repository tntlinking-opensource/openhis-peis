<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.oracle.dao.OutsideChargeItemMapper">

    <resultMap type="com.center.medical.datamove.oracle.bean.model.OutsideChargeItem" id="OutsideChargeItemMap">
        <id property="id" column="ID"/>
        <result property="patientcode" column="PATIENTCODE"/>
        <result property="createdate" column="CREATEDATE"/>
        <result property="modifydate" column="MODIFYDATE"/>
        <result property="idCharge" column="ID_CHARGE"/>
        <result property="idDepart" column="ID_DEPART"/>
        <result property="isDelete" column="IS_DELETE"/>
        <result property="wsjgId" column="WSJG_ID"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectOutsideChargeItemVo">
        select ID,
               PATIENTCODE,
               CREATEDATE,
               MODIFYDATE,
               ID_CHARGE,
               ID_DEPART,
               IS_DELETE,
               WSJG_ID
        from OUTSIDE_CHARGE_ITEM
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="OutsideChargeItemMap">
        <include refid="selectOutsideChargeItemVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="OutsideChargeItemMap">
        <include refid="selectOutsideChargeItemVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

