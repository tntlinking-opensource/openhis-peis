<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.oracle.dao.ShortMessageTypeMapper">

    <resultMap type="com.center.medical.datamove.oracle.bean.model.ShortMessageType" id="ShortMessageTypeMap">
        <id property="id" column="ID"/>
        <result property="typeName" column="TYPE_NAME"/>
        <result property="inputcode" column="INPUTCODE"/>
        <result property="createdate" column="CREATEDATE"/>
        <result property="modifydate" column="MODIFYDATE"/>
        <result property="note" column="NOTE"/>
        <result property="isDelete" column="IS_DELETE"/>
        <result property="params" column="PARAMS"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectShortMessageTypeVo">
        select ID,
               TYPE_NAME,
               INPUTCODE,
               CREATEDATE,
               MODIFYDATE,
               NOTE,
               IS_DELETE,
               PARAMS
        from SHORT_MESSAGE_TYPE
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="ShortMessageTypeMap">
        <include refid="selectShortMessageTypeVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="ShortMessageTypeMap">
        <include refid="selectShortMessageTypeVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

