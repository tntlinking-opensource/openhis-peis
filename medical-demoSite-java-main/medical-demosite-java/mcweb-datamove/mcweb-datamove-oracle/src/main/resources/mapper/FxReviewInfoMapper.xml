<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.oracle.dao.FxReviewInfoMapper">

    <resultMap type="com.center.medical.datamove.oracle.bean.model.FxReviewInfo" id="FxReviewInfoMap">
        <id property="id" column="ID"/>
        <result property="createdate" column="CREATEDATE"/>
        <result property="modifydate" column="MODIFYDATE"/>
        <result property="harmId" column="HARM_ID"/>
        <result property="harmName" column="HARM_NAME"/>
        <result property="diagnosis" column="DIAGNOSIS"/>
        <result property="num" column="NUM"/>
        <result property="summaryText" column="SUMMARY_TEXT"/>
        <result property="sampleId" column="SAMPLE_ID"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectFxReviewInfoVo">
        select ID,
               CREATEDATE,
               MODIFYDATE,
               HARM_ID,
               HARM_NAME,
               DIAGNOSIS,
               NUM,
               SUMMARY_TEXT,
               SAMPLE_ID
        from FX_REVIEW_INFO
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="FxReviewInfoMap">
        <include refid="selectFxReviewInfoVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="FxReviewInfoMap">
        <include refid="selectFxReviewInfoVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

