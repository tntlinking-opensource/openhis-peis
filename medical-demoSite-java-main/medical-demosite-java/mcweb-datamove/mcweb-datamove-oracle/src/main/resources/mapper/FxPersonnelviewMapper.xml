<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.oracle.dao.FxPersonnelviewMapper">

    <resultMap type="com.center.medical.datamove.oracle.bean.model.FxPersonnelview" id="FxPersonnelviewMap">
        <id property="id" column="ID"/>
        <result property="patientcode" column="PATIENTCODE"/>
        <result property="sampleId" column="SAMPLE_ID"/>
        <result property="positives" column="POSITIVES"/>
        <result property="summaryText" column="SUMMARY_TEXT"/>
        <result property="summarySerialno" column="SUMMARY_SERIALNO"/>
        <result property="occupationSummary" column="OCCUPATION_SUMMARY"/>
        <result property="patientname" column="PATIENTNAME"/>
        <result property="sex" column="SEX"/>
        <result property="age" column="AGE"/>
        <result property="jhgl" column="JHGL"/>
        <result property="jhys" column="JHYS"/>
        <result property="jhysIds" column="JHYS_IDS"/>
        <result property="trades" column="TRADES"/>
        <result property="createdate" column="CREATEDATE"/>
        <result property="modifydate" column="MODIFYDATE"/>
        <result property="idcardno" column="IDCARDNO"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectFxPersonnelviewVo">
        select ID,
               PATIENTCODE,
               SAMPLE_ID,
               POSITIVES,
               SUMMARY_TEXT,
               SUMMARY_SERIALNO,
               OCCUPATION_SUMMARY,
               PATIENTNAME,
               SEX,
               AGE,
               JHGL,
               JHYS,
               JHYS_IDS,
               TRADES,
               CREATEDATE,
               MODIFYDATE,
               IDCARDNO
        from FX_PERSONNELVIEW
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="FxPersonnelviewMap">
        <include refid="selectFxPersonnelviewVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="FxPersonnelviewMap">
        <include refid="selectFxPersonnelviewVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

