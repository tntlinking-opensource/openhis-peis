<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.oracle.dao.ConsulationMapper">

    <resultMap type="com.center.medical.datamove.oracle.bean.model.Consulation" id="ConsulationMap">
        <id property="id" column="ID"/>
        <result property="modifydate" column="MODIFYDATE"/>
        <result property="createdate" column="CREATEDATE"/>
        <result property="consultType" column="CONSULT_TYPE"/>
        <result property="consultName" column="CONSULT_NAME"/>
        <result property="consultTime" column="CONSULT_TIME"/>
        <result property="depId" column="DEP_ID"/>
        <result property="signPath" column="SIGN_PATH"/>
        <result property="consultContent" column="CONSULT_CONTENT"/>
        <result property="patientcode" column="PATIENTCODE"/>
        <result property="consultPhone" column="CONSULT_PHONE"/>
        <result property="doctorUsername" column="DOCTOR_USERNAME"/>
        <result property="configId" column="CONFIG_ID"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectConsulationVo">
        select ID,
               MODIFYDATE,
               CREATEDATE,
               CONSULT_TYPE,
               CONSULT_NAME,
               CONSULT_TIME,
               DEP_ID,
               SIGN_PATH,
               CONSULT_CONTENT,
               PATIENTCODE,
               CONSULT_PHONE,
               DOCTOR_USERNAME,
               CONFIG_ID
        from CONSULATION
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="ConsulationMap">
        <include refid="selectConsulationVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="ConsulationMap">
        <include refid="selectConsulationVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

