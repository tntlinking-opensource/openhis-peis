<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.oracle.dao.VCheckLisDetailMapper">

    <resultMap type="com.center.medical.datamove.oracle.bean.model.VCheckLisDetail" id="VCheckLisDetailMap">
        <id property="checkreqid" column="CheckReqID"/>
        <result property="subitemcode" column="SubItemCode"/>
        <result property="subitemname" column="SubItemName"/>
        <result property="resultcode" column="ResultCode"/>
        <result property="resultunit" column="ResultUnit"/>
        <result property="report" column="Report"/>
        <result property="limitrange" column="LimitRange"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectVCheckLisDetailVo">
        select CheckReqID, SubItemCode, SubItemName, ResultCode, ResultUnit, Report, LimitRange
        from v_Check_LIS_Detail
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="VCheckLisDetailMap">
        <include refid="selectVCheckLisDetailVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="VCheckLisDetailMap">
        <include refid="selectVCheckLisDetailVo"/>
        <where>
            checkreqid = #{id}
        </where>
    </select>

</mapper>

