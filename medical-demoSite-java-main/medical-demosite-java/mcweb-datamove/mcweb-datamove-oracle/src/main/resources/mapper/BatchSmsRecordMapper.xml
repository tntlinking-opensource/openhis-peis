<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.oracle.dao.BatchSmsRecordMapper">

    <resultMap type="com.center.medical.datamove.oracle.bean.model.BatchSmsRecord" id="BatchSmsRecordMap">
        <id property="id" column="ID"/>
        <result property="createdate" column="CREATEDATE"/>
        <result property="modifydate" column="MODIFYDATE"/>
        <result property="phone" column="PHONE"/>
        <result property="status" column="STATUS"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectBatchSmsRecordVo">
        select ID, CREATEDATE, MODIFYDATE, PHONE, STATUS
        from BATCH_SMS_RECORD
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="BatchSmsRecordMap">
        <include refid="selectBatchSmsRecordVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="BatchSmsRecordMap">
        <include refid="selectBatchSmsRecordVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

