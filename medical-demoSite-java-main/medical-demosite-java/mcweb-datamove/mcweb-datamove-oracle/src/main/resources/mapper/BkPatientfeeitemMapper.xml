<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.oracle.dao.BkPatientfeeitemMapper">

    <resultMap type="com.center.medical.datamove.oracle.bean.model.BkPatientfeeitem" id="BkPatientfeeitemMap">
        <id property="id" column="ID"/>
        <result property="createdate" column="CREATEDATE"/>
        <result property="modifydate" column="MODIFYDATE"/>
        <result property="idPatient" column="ID_PATIENT"/>
        <result property="note" column="NOTE"/>
        <result property="examfeeitemName" column="EXAMFEEITEM_NAME"/>
        <result property="factprice" column="FACTPRICE"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectBkPatientfeeitemVo">
        select ID, CREATEDATE, MODIFYDATE, ID_PATIENT, NOTE, EXAMFEEITEM_NAME, FACTPRICE
        from BK_PATIENTFEEITEM
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="BkPatientfeeitemMap">
        <include refid="selectBkPatientfeeitemVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="BkPatientfeeitemMap">
        <include refid="selectBkPatientfeeitemVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

