<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.oracle.dao.ConsumptionPointsRecordMapper">

    <resultMap type="com.center.medical.datamove.oracle.bean.model.ConsumptionPointsRecord"
               id="ConsumptionPointsRecordMap">
        <id property="id" column="ID"/>
        <result property="phone" column="PHONE"/>
        <result property="idCardNo" column="ID_CARD_NO"/>
        <result property="total" column="TOTAL"/>
        <result property="description" column="DESCRIPTION"/>
        <result property="paymentMethod" column="PAYMENT_METHOD"/>
        <result property="type" column="TYPE"/>
        <result property="points" column="POINTS"/>
        <result property="isSuccess" column="IS_SUCCESS"/>
        <result property="createBy" column="CREATE_BY"/>
        <result property="createDate" column="CREATE_DATE"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectConsumptionPointsRecordVo">
        select ID,
               PHONE,
               ID_CARD_NO,
               TOTAL,
               DESCRIPTION,
               PAYMENT_METHOD,
               TYPE,
               POINTS,
               IS_SUCCESS,
               CREATE_BY,
               CREATE_DATE
        from CONSUMPTION_POINTS_RECORD
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="ConsumptionPointsRecordMap">
        <include refid="selectConsumptionPointsRecordVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="ConsumptionPointsRecordMap">
        <include refid="selectConsumptionPointsRecordVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

