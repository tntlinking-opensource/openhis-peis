<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.oracle.dao.NotifySmsVisitMapper">

    <resultMap type="com.center.medical.datamove.oracle.bean.model.NotifySmsVisit" id="NotifySmsVisitMap">
        <id property="id" column="ID"/>
        <result property="idVisit" column="ID_VISIT"/>
        <result property="idTemplate" column="ID_TEMPLATE"/>
        <result property="notifyResult" column="NOTIFY_RESULT"/>
        <result property="notifyTime" column="NOTIFY_TIME"/>
        <result property="createer" column="CREATEER"/>
        <result property="fzxid" column="FZXID"/>
        <result property="createdate" column="CREATEDATE"/>
        <result property="modifydate" column="MODIFYDATE"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectNotifySmsVisitVo">
        select ID,
               ID_VISIT,
               ID_TEMPLATE,
               NOTIFY_RESULT,
               NOTIFY_TIME,
               CREATEER,
               FZXID,
               CREATEDATE,
               MODIFYDATE
        from NOTIFY_SMS_VISIT
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="NotifySmsVisitMap">
        <include refid="selectNotifySmsVisitVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="NotifySmsVisitMap">
        <include refid="selectNotifySmsVisitVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

