<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.oracle.dao.GroupReviewNoticePatientMapper">

    <resultMap type="com.center.medical.datamove.oracle.bean.model.GroupReviewNoticePatient"
               id="GroupReviewNoticePatientMap">
        <id property="id" column="ID"/>
        <result property="createdate" column="CREATEDATE"/>
        <result property="modifydate" column="MODIFYDATE"/>
        <result property="mainId" column="MAIN_ID"/>
        <result property="patientcode" column="PATIENTCODE"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectGroupReviewNoticePatientVo">
        select ID, CREATEDATE, MODIFYDATE, MAIN_ID, PATIENTCODE
        from GROUP_REVIEW_NOTICE_PATIENT
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="GroupReviewNoticePatientMap">
        <include refid="selectGroupReviewNoticePatientVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="GroupReviewNoticePatientMap">
        <include refid="selectGroupReviewNoticePatientVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

