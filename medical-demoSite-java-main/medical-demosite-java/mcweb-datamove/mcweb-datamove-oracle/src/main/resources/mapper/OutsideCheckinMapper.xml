<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.oracle.dao.OutsideCheckinMapper">

    <resultMap type="com.center.medical.datamove.oracle.bean.model.OutsideCheckin" id="OutsideCheckinMap">
        <id property="id" column="ID"/>
        <result property="patientcode" column="PATIENTCODE"/>
        <result property="createdate" column="CREATEDATE"/>
        <result property="modifydate" column="MODIFYDATE"/>
        <result property="idCharge" column="ID_CHARGE"/>
        <result property="status" column="STATUS"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectOutsideCheckinVo">
        select ID, PATIENTCODE, CREATEDATE, MODIFYDATE, ID_CHARGE, STATUS
        from OUTSIDE_CHECKIN
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="OutsideCheckinMap">
        <include refid="selectOutsideCheckinVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="OutsideCheckinMap">
        <include refid="selectOutsideCheckinVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

