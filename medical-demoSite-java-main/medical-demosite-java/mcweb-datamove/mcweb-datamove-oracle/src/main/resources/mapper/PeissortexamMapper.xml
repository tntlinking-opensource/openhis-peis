<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.oracle.dao.PeissortexamMapper">

    <resultMap type="com.center.medical.datamove.oracle.bean.model.Peissortexam" id="PeissortexamMap">
        <id property="id" column="ID"/>
        <result property="createdate" column="CREATEDATE"/>
        <result property="modifydate" column="MODIFYDATE"/>
        <result property="groupId" column="GROUP_ID"/>
        <result property="sortDate" column="SORT_DATE"/>
        <result property="orderId" column="ORDER_ID"/>
        <result property="sortNum" column="SORT_NUM"/>
        <result property="tcid" column="TCID"/>
        <result property="am" column="AM"/>
        <result property="pm" column="PM"/>
        <result property="creator" column="CREATOR"/>
        <result property="bz" column="BZ"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectPeissortexamVo">
        select ID,
               CREATEDATE,
               MODIFYDATE,
               GROUP_ID,
               SORT_DATE,
               ORDER_ID,
               SORT_NUM,
               TCID,
               AM,
               PM,
               CREATOR,
               BZ
        from PEISSORTEXAM
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="PeissortexamMap">
        <include refid="selectPeissortexamVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="PeissortexamMap">
        <include refid="selectPeissortexamVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

