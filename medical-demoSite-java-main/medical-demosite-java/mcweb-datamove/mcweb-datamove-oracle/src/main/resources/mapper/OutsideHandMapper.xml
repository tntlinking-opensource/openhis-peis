<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.oracle.dao.OutsideHandMapper">

    <resultMap type="com.center.medical.datamove.oracle.bean.model.OutsideHand" id="OutsideHandMap">
        <id property="id" column="ID"/>
        <result property="patientcode" column="PATIENTCODE"/>
        <result property="createdate" column="CREATEDATE"/>
        <result property="modifydate" column="MODIFYDATE"/>
        <result property="result" column="RESULT"/>
        <result property="idCharge" column="ID_CHARGE"/>
        <result property="idCheck" column="ID_CHECK"/>
        <result property="resultHand" column="RESULT_HAND"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectOutsideHandVo">
        select ID,
               PATIENTCODE,
               CREATEDATE,
               MODIFYDATE,
               RESULT,
               ID_CHARGE,
               ID_CHECK,
               RESULT_HAND
        from OUTSIDE_HAND
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="OutsideHandMap">
        <include refid="selectOutsideHandVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="OutsideHandMap">
        <include refid="selectOutsideHandVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

