<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.oracle.dao.DrugAndFzxMapper">

    <resultMap type="com.center.medical.datamove.oracle.bean.model.DrugAndFzx" id="DrugAndFzxMap">
        <id property="id" column="ID"/>
        <result property="createdate" column="CREATEDATE"/>
        <result property="modifydate" column="MODIFYDATE"/>
        <result property="drugId" column="DRUG_ID"/>
        <result property="fzxId" column="FZX_ID"/>
        <result property="tbzt" column="TBZT"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectDrugAndFzxVo">
        select ID, CREATEDATE, MODIFYDATE, DRUG_ID, FZX_ID, TBZT
        from DRUG_AND_FZX
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="DrugAndFzxMap">
        <include refid="selectDrugAndFzxVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="DrugAndFzxMap">
        <include refid="selectDrugAndFzxVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

