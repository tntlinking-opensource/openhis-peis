<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.oracle.dao.SectionAndRemindMapper">

    <resultMap type="com.center.medical.datamove.oracle.bean.model.SectionAndRemind" id="SectionAndRemindMap">
        <id property="id" column="ID"/>
        <result property="createdate" column="CREATEDATE"/>
        <result property="modifydate" column="MODIFYDATE"/>
        <result property="remindId" column="REMIND_ID"/>
        <result property="depId" column="DEP_ID"/>
        <result property="patientcode" column="PATIENTCODE"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectSectionAndRemindVo">
        select ID, CREATEDATE, MODIFYDATE, REMIND_ID, DEP_ID, PATIENTCODE
        from SECTION_AND_REMIND
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="SectionAndRemindMap">
        <include refid="selectSectionAndRemindVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="SectionAndRemindMap">
        <include refid="selectSectionAndRemindVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

