<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.oracle.dao.AppCouponMapper">

    <resultMap type="com.center.medical.datamove.oracle.bean.model.AppCoupon" id="AppCouponMap">
        <id property="id" column="ID"/>
        <result property="createdate" column="CREATEDATE"/>
        <result property="modifydate" column="MODIFYDATE"/>
        <result property="amount" column="AMOUNT"/>
        <result property="status" column="STATUS"/>
        <result property="begindate" column="BEGINDATE"/>
        <result property="enddate" column="ENDDATE"/>
        <result property="limitxf" column="LIMITXF"/>
        <result property="creater" column="CREATER"/>
        <result property="modifyer" column="MODIFYER"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectAppCouponVo">
        select ID,
               CREATEDATE,
               MODIFYDATE,
               AMOUNT,
               STATUS,
               BEGINDATE,
               ENDDATE,
               LIMITXF,
               CREATER,
               MODIFYER
        from APP_COUPON
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="AppCouponMap">
        <include refid="selectAppCouponVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="AppCouponMap">
        <include refid="selectAppCouponVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

