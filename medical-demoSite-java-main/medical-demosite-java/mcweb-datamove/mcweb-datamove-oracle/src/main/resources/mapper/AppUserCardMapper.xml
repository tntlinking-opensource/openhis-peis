<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.oracle.dao.AppUserCardMapper">

    <resultMap type="com.center.medical.datamove.oracle.bean.model.AppUserCard" id="AppUserCardMap">
        <id property="id" column="ID"/>
        <result property="createdate" column="CREATEDATE"/>
        <result property="modifydate" column="MODIFYDATE"/>
        <result property="userId" column="USER_ID"/>
        <result property="cardId" column="CARD_ID"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectAppUserCardVo">
        select ID, CREATEDATE, MODIFYDATE, USER_ID, CARD_ID
        from APP_USER_CARD
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="AppUserCardMap">
        <include refid="selectAppUserCardVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="AppUserCardMap">
        <include refid="selectAppUserCardVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

