<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.dao.SqlOptionLogMapper">

    <resultMap type="com.center.medical.bean.model.SqlOptionLog" id="SqlOptionLogMap">
        <id property="id" column="id"/>
        <result property="sqlStatement" column="sql_statement"/>
        <result property="operationType" column="operation_type"/>
        <result property="operationTime" column="operation_time"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectSqlOptionLogVo">
        select id, sql_statement, operation_type, operation_time
        from sys_sql_option_log
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="SqlOptionLogMap">
        <include refid="selectSqlOptionLogVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="SqlOptionLogMap">
        <include refid="selectSqlOptionLogVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

