<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.dao.GroupAndFzxMapper">

    <resultMap type="com.center.medical.bean.model.GroupAndFzx" id="GroupAndFzxMap">
        <id property="id" column="id"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
        <result property="groupId" column="group_id"/>
        <result property="fzxId" column="fzx_id"/>
        <result property="xzzt" column="xzzt"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectGroupAndFzxVo">
        select id, createdate, modifydate, group_id, fzx_id, xzzt
        from md_group_and_fzx
    </sql>

    <!-- 查询列表数据 -->
    <select id="getList" resultMap="GroupAndFzxMap">
        <include refid="selectGroupAndFzxVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="GroupAndFzxMap">
        <include refid="selectGroupAndFzxVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

