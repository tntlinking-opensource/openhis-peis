<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.dao.PeispatientPhotoMapper">

    <resultMap type="com.center.medical.bean.model.PeispatientPhoto" id="PeispatientPhotoMap">
        <id property="id" column="id"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
        <result property="patientcode" column="patientcode"/>
        <result property="picture" column="picture"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectPeispatientPhotoVo">
        select id, createdate, modifydate, patientcode, picture
        from md_peispatient_photo
    </sql>

    <!-- 查询列表数据 -->
    <select id="getList" resultMap="PeispatientPhotoMap">
        <include refid="selectPeispatientPhotoVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="PeispatientPhotoMap">
        <include refid="selectPeispatientPhotoVo"/>
        <where>
            id = #{id}
        </where>
    </select>


    <!-- 根据体检号获取记录详情 -->
    <select id="getByPatientCode" resultMap="PeispatientPhotoMap">
        <include refid="selectPeispatientPhotoVo"/>
        <where>
            patientcode = #{patientCode}
        </where>
    </select>
</mapper>

