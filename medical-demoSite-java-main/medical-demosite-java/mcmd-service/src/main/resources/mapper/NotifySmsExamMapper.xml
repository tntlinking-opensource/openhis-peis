<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.dao.NotifySmsExamMapper">

    <resultMap type="com.center.medical.bean.model.NotifySmsExam" id="NotifySmsExamMap">
        <id property="id" column="id"/>
        <result property="idOrder" column="id_order"/>
        <result property="ddh" column="ddh"/>
        <result property="idContact" column="id_contact"/>
        <result property="phone" column="phone"/>
        <result property="patientcode" column="patientcode"/>
        <result property="createer" column="createer"/>
        <result property="fzxid" column="fzxid"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectNotifySmsExamVo">
        select id,
               id_order,
               ddh,
               id_contact,
               phone,
               patientcode,
               createer,
               fzxid,
               createdate,
               modifydate
        from md_notify_sms_exam
    </sql>

    <!-- 查询列表数据 -->
    <select id="getList" resultMap="NotifySmsExamMap">
        <include refid="selectNotifySmsExamVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="NotifySmsExamMap">
        <include refid="selectNotifySmsExamVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

