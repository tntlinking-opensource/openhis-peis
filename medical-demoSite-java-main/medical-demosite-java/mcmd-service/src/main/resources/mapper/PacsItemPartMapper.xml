<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.dao.PacsItemPartMapper">

    <resultMap type="com.center.medical.bean.model.PacsItemPart" id="PacsItemPartMap">
        <id property="id" column="id"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
        <result property="itemId" column="item_id"/>
        <result property="partId" column="part_id"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectPacsItemPartVo">
        select id, createdate, modifydate, item_id, part_id
        from md_pacs_item_part
    </sql>

    <!-- 查询列表数据 -->
    <select id="getList" resultMap="PacsItemPartMap">
        <include refid="selectPacsItemPartVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="PacsItemPartMap">
        <include refid="selectPacsItemPartVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

