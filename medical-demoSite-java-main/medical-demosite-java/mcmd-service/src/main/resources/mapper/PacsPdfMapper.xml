<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.dao.PacsPdfMapper">

    <resultMap type="com.center.medical.bean.model.PacsPdf" id="PacsPdfMap">
        <id property="id" column="id"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
        <result property="feeitemId" column="feeitem_id"/>
        <result property="patientcode" column="patientcode"/>
        <result property="pdfUrl" column="pdf_url"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectPacsPdfVo">
        select id, createdate, modifydate, feeitem_id, patientcode, pdf_url
        from md_pacs_pdf
    </sql>

    <!-- 查询列表数据 -->
    <select id="getList" resultMap="PacsPdfMap">
        <include refid="selectPacsPdfVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="PacsPdfMap">
        <include refid="selectPacsPdfVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

