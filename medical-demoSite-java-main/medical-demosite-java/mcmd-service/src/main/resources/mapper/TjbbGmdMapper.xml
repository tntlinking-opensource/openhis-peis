<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.dao.TjbbGmdMapper">

    <resultMap type="com.center.medical.bean.model.TjbbGmd" id="TjbbGmdMap">
        <id property="id" column="id"/>
        <result property="patientcode" column="patientcode"/>
        <result property="xh" column="xh"/>
        <result property="gmd" column="gmd"/>
        <result property="ckfw" column="ckfw"/>
        <result property="valueMin" column="value_min"/>
        <result property="valueMax" column="value_max"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
        <result property="createId" column="create_id"/>
        <result property="modifyId" column="modify_id"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectTjbbGmdVo">
        select id,
               patientcode,
               xh,
               gmd,
               ckfw,
               value_min,
               value_max,
               createdate,
               modifydate,
               create_id,
               modify_id
        from md_tjbb_gmd
    </sql>

    <!-- 查询列表数据 -->
    <select id="getList" resultMap="TjbbGmdMap">
        <include refid="selectTjbbGmdVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="TjbbGmdMap">
        <include refid="selectTjbbGmdVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

