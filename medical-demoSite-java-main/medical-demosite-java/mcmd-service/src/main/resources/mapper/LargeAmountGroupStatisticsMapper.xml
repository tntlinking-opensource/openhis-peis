<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.dao.LargeAmountGroupStatisticsMapper">

    <resultMap type="com.center.medical.bean.model.LargeAmountGroupStatistics" id="LargeAmountGroupStatisticsMap">
        <id property="id" column="id"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
        <result property="year" column="year"/>
        <result property="money" column="money"/>
        <result property="orgId" column="org_id"/>
        <result property="salesmanUsername" column="salesman_username"/>
        <result property="orderCount" column="order_count"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectLargeAmountGroupStatisticsVo">
        select id, createdate, modifydate, year, money, org_id, salesman_username, order_count
        from md_large_amount_group_statistics
    </sql>

    <!-- 查询列表数据 -->
    <select id="getList" resultMap="LargeAmountGroupStatisticsMap">
        <include refid="selectLargeAmountGroupStatisticsVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="LargeAmountGroupStatisticsMap">
        <include refid="selectLargeAmountGroupStatisticsVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

