<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.dao.ChestMapper">

    <resultMap type="com.center.medical.bean.model.Chest" id="ChestMap">
        <id property="id" column="id"/>
        <result property="tjlx" column="tjlx"/>
        <result property="ddh" column="ddh"/>
        <result property="gzh" column="gzh"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
        <result property="note" column="note"/>
        <result property="dwmc" column="dwmc"/>
        <result property="isDelete" column="is_delete"/>
        <result property="chestNum" column="chest_num"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectChestVo">
        select id,
               tjlx,
               ddh,
               gzh,
               createdate,
               modifydate,
               note,
               dwmc,
               is_delete,
               chest_num
        from md_chest
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="ChestMap">
        select id,
               tjlx,
               ddh,
               gzh,
               dwmc
        from md_chest
        <where>
            is_delete = 0
            <if test="param.ddh!=null and param.ddh!=''">
                AND ddh = #{param.ddh}
            </if>
            <if test="param.tjlx!=null and param.tjlx!=''">
                AND tjlx = #{param.tjlx}
            </if>
            <if test="param.dwmc!=null and param.dwmc!=''">
                AND dwmc LIKE #{param.dwmc}
            </if>
            <if test="param.gzh!=null and param.gzh!=''">
                AND gzh = #{param.gzh}
            </if>
        </where>
        ORDER BY modifydate DESC
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="ChestMap">
        <include refid="selectChestVo"/>
        <where>
            id = #{id}
            AND is_delete = 0
        </where>
    </select>


    <!-- 获取订单柜子信息导出数据 -->
    <select id="getExportData" resultMap="ChestMap">
        select id,
        tjlx,
        ddh,
        gzh,
        dwmc
        from md_chest
        <where>
            is_delete = 0
            <if test="param.ddh!=null and param.ddh!=''">
                AND ddh = #{param.ddh}
            </if>
            <if test="param.tjlx!=null and param.tjlx!=''">
                AND tjlx = #{param.tjlx}
            </if>
            <if test="param.dwmc!=null and param.dwmc!=''">
                AND dwmc LIKE #{param.dwmc}
            </if>
            <if test="param.gzh!=null and param.gzh!=''">
                AND gzh = #{param.gzh}
            </if>
        </where>
        ORDER BY modifydate DESC
    </select>

</mapper>

