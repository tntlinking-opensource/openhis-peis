<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.dao.AttachmentConfigMapper">

    <resultMap type="com.center.medical.bean.model.AttachmentConfig" id="AttachmentConfigMap">
        <id property="id" column="id"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
        <result property="aetitle" column="aetitle"/>
        <result property="ip" column="ip"/>
        <result property="port" column="port"/>
        <result property="realPath" column="real_path"/>
        <result property="visitPath" column="visit_path"/>
        <result property="memo" column="memo"/>
        <result property="memoA" column="memo_a"/>
        <result property="memoB" column="memo_b"/>
        <result property="flag" column="flag"/>
        <result property="mappingPath" column="mapping_path"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectAttachmentConfigVo">
        select id,
               createdate,
               modifydate,
               aetitle,
               ip,
               port,
               real_path,
               visit_path,
               memo,
               memo_a,
               memo_b,
               flag,
               mapping_path
        from md_attachment_config
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="AttachmentConfigMap">
        select id,
               createdate,
               modifydate,
               aetitle,
               ip,
               port,
               real_path,
               visit_path,
               memo,
               memo_a,
               memo_b,
               flag,
               mapping_path
        from md_attachment_config
        order by flag asc
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="AttachmentConfigMap">
        <include refid="selectAttachmentConfigVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

