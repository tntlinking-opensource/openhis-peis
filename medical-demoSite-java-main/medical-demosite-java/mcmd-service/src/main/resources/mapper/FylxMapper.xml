<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.dao.FylxMapper">

    <resultMap type="com.center.medical.bean.model.Fylx" id="FylxMap">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="srm" column="srm"/>
        <result property="isDelete" column="is_delete"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectFylxVo">
        select id, name, srm, is_delete, createdate, modifydate
        from md_fylx
    </sql>

    <!-- 查询列表数据 -->
    <select id="getList" resultMap="FylxMap">
        <include refid="selectFylxVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="FylxMap">
        <include refid="selectFylxVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

