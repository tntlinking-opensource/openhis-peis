<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.dao.WsUserRoleMapper">

    <resultMap type="com.center.medical.bean.model.WsUserRole" id="WsUserRoleMap">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="roleId" column="role_id"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectWsUserRoleVo">
        select user_id, role_id
        from ws_user_role
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="WsUserRoleMap">
        <include refid="selectWsUserRoleVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="WsUserRoleMap">
        <include refid="selectWsUserRoleVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

