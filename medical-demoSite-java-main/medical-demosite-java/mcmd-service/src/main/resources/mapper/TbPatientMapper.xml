<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.dao.TbPatientMapper">

    <resultMap type="com.center.medical.bean.model.TbPatient" id="TbPatientMap">
        <id property="id" column="id"/>
        <result property="patientcode" column="patientcode"/>
        <result property="idcardno" column="idcardno"/>
        <result property="patientname" column="patientname"/>
        <result property="inputCode" column="input_code"/>
        <result property="idSex" column="id_sex"/>
        <result property="birthdate" column="birthdate"/>
        <result property="age" column="age"/>
        <result property="idMarriage" column="id_marriage"/>
        <result property="marriage" column="marriage"/>
        <result property="phone" column="phone"/>
        <result property="idPatientclass" column="id_patientclass"/>
        <result property="dateregister" column="dateregister"/>
        <result property="shortCode" column="short_code"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
        <result property="pictures" column="pictures"/>
        <result property="upFzxId" column="up_fzx_id"/>
        <result property="downFzxId" column="down_fzx_id"/>
        <result property="upName" column="up_name"/>
        <result property="downTime" column="down_time"/>
        <result property="backTime" column="back_time"/>
        <result property="finishTime" column="finish_time"/>
        <result property="status" column="status"/>
        <result property="downName" column="down_name"/>
        <result property="backName" column="back_name"/>
        <result property="finishName" column="finish_name"/>
        <result property="idExamtype" column="id_examtype"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectTbPatientVo">
        select id,
               patientcode,
               idcardno,
               patientname,
               input_code,
               id_sex,
               birthdate,
               age,
               id_marriage,
               marriage,
               phone,
               id_patientclass,
               dateregister,
               short_code,
               createdate,
               modifydate,
               pictures,
               up_fzx_id,
               down_fzx_id,
               up_name,
               down_time,
               back_time,
               finish_time,
               status,
               down_name,
               back_name,
               finish_name,
               id_examtype
        from md_tb_patient
    </sql>

    <!-- 查询列表数据 -->
    <select id="getList" resultMap="TbPatientMap">
        <include refid="selectTbPatientVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="TbPatientMap">
        <include refid="selectTbPatientVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

