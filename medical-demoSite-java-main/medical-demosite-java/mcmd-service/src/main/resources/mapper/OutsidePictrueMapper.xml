<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.dao.OutsidePictrueMapper">

    <resultMap type="com.center.medical.bean.model.OutsidePictrue" id="OutsidePictrueMap">
        <id property="id" column="id"/>
        <result property="patientcode" column="patientcode"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
        <result property="pictruePosition" column="pictrue_position"/>
        <result property="orderIndex" column="order_index"/>
        <result property="chargeId" column="charge_id"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectOutsidePictrueVo">
        select id, patientcode, createdate, modifydate, pictrue_position, order_index, charge_id
        from md_outside_pictrue
    </sql>

    <!-- 查询列表数据 -->
    <select id="getList" resultMap="OutsidePictrueMap">
        <include refid="selectOutsidePictrueVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="OutsidePictrueMap">
        <include refid="selectOutsidePictrueVo"/>
        <where>
            id = #{id}
        </where>
    </select>


    <!-- 根据体检号查询最大序号 -->
    <select id="selectMaxIndex" resultType="int">
        SELECT
            IFNULL(max(order_index ), 0 )
        FROM
            md_outside_pictrue
        WHERE
            patientcode = #{patientcode}
    </select>




    <!-- 根据体检号查询最大序号 -->
    <select id="getOutSidePicture" resultMap="OutsidePictrueMap">
        SELECT
            id,
            patientcode,
            createdate,
            modifydate,
            pictrue_position,
            order_index,
            charge_id
        FROM
            md_outside_pictrue
        WHERE
            patientcode = #{patientcode}
            and pictrue_position is not null
    </select>
</mapper>

