<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.dao.PeispatientarchiveMapper">

    <resultMap type="com.center.medical.bean.model.Peispatientarchive" id="PeispatientarchiveMap">
        <id property="id" column="id"/>
        <result property="idPatientarchive" column="id_patientarchive"/>
        <result property="patientarchiveno" column="patientarchiveno"/>
        <result property="patientcardno" column="patientcardno"/>
        <result property="idcardno" column="idcardno"/>
        <result property="patientname" column="patientname"/>
        <result property="inputCode" column="input_code"/>
        <result property="idSex" column="id_sex"/>
        <result property="sex" column="sex"/>
        <result property="age" column="age"/>
        <result property="agebasedate" column="agebasedate"/>
        <result property="birthdate" column="birthdate"/>
        <result property="idMarriage" column="id_marriage"/>
        <result property="marriage" column="marriage"/>
        <result property="idNation" column="id_nation"/>
        <result property="nation" column="nation"/>
        <result property="address" column="address"/>
        <result property="phone" column="phone"/>
        <result property="idEducation" column="id_education"/>
        <result property="education" column="education"/>
        <result property="idOccupation" column="id_occupation"/>
        <result property="occupation" column="occupation"/>
        <result property="idResarea" column="id_resarea"/>
        <result property="resarea" column="resarea"/>
        <result property="dateregister" column="dateregister"/>
        <result property="note" column="note"/>
        <result property="ishmd" column="ishmd"/>
        <result property="hmdbz" column="hmdbz"/>
        <result property="restatus" column="restatus"/>
        <result property="yjgzbj" column="yjgzbj"/>
        <result property="memberlevel" column="memberlevel"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
        <result property="cultural" column="cultural"/>
        <result property="isOrg" column="is_org"/>
        <result property="membercreate" column="membercreate"/>
        <result property="khjl" column="khjl"/>
        <result property="jf" column="jf"/>
        <result property="fzx" column="fzx"/>
        <result property="dw" column="dw"/>
        <result property="isDelete" column="is_delete"/>
        <result property="countreportoccupationxml" column="countreportoccupationxml"/>
        <result property="isMain" column="is_main"/>
        <result property="source" column="source"/>
        <result property="oldCard" column="old_card"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectPeispatientarchiveVo">
        select id,
               id_patientarchive,
               patientarchiveno,
               patientcardno,
               idcardno,
               patientname,
               input_code,
               id_sex,
               sex,
               age,
               agebasedate,
               birthdate,
               id_marriage,
               marriage,
               id_nation,
               nation,
               address,
               phone,
               id_education,
               education,
               id_occupation,
               occupation,
               id_resarea,
               resarea,
               dateregister,
               note,
               ishmd,
               hmdbz,
               restatus,
               yjgzbj,
               memberlevel,
               createdate,
               modifydate,
               cultural,
               is_org,
               membercreate,
               khjl,
               jf,
               fzx,
               dw,
               is_delete,
               countreportoccupationxml,
               is_main,
               `source`,
               old_card
        from md_peispatientarchive
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultType="com.center.medical.bean.vo.MemberVo">
        SELECT
        pa.id,
        pa.patientcardno,
        pa.patientname,
        pa.idcardno,
        pa.id_sex,
        pa.phone,
        pa.memberlevel,
        pa.fzx,
        pa.jf,
        pa.khjl,
        pa.dw,
        pa.note,
        pa.createdate,
        sb.fzx AS fzxmc,
        u.user_name,
        u2.user_name AS khjlmc
        FROM
        md_peispatientarchive pa
        LEFT JOIN sys_branch sb ON pa.fzx = sb.branch_id
        LEFT JOIN sys_user u ON pa.membercreate = u.user_no
        LEFT JOIN sys_user u2 ON pa.khjl = u2.user_no
        <where>
            <if test="param.branchIds!=null">
                AND pa.fzx IN
                <foreach collection="param.branchIds" item="brandId" open="(" close=")" separator=",">
                    #{brandId}
                </foreach>
            </if>
            <if test="param.patientcardno!=null and param.patientcardno!=''">
                AND pa.patientcardno LIKE concat('%',#{param.patientcardno},'%')
            </if>
            <if test="param.patientname!=null and param.patientname!=''">
                AND pa.patientname LIKE concat('%',#{param.patientname},'%')
            </if>
            <if test="param.phone!=null and param.phone!=''">
                AND pa.phone LIKE concat('%',#{param.phone},'%')
            </if>
            <if test="param.idcardno!=null and param.idcardno!=''">
                AND pa.idcardno LIKE concat('%',#{param.idcardno},'%')
            </if>
        </where>
        ORDER BY pa.createdate, patientcardno DESC
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="PeispatientarchiveMap">
        <include refid="selectPeispatientarchiveVo"/>
        <where>
            id = #{id}
        </where>
    </select>

    <!--根据条件筛选会员列表数据-->
    <select id="getList" resultType="com.center.medical.bean.vo.MerExportVo">
        SELECT
        pa.id,
        pa.patientcardno,
        pa.patientname,
        pa.idcardno,
        pa.id_sex,
        pa.phone,
        pa.memberlevel,
        pa.fzx,
        pa.jf,
        pa.khjl,
        pa.dw,
        pa.note,
        pa.create_date,
        sb.fzx AS fzxmc,
        u.user_name,
        u2.user_name AS khjlmc
        FROM
        md_peispatientarchive pa
        LEFT JOIN sys_branch sb ON pa.fzx = sb.branch_id
        LEFT JOIN sys_user u ON pa.membercreate = u.user_no
        LEFT JOIN sys_user u2 ON pa.khjl = u2.user_no
        <where>
            <if test="param.branchIds!=null">
                AND pa.fzx IN
                <foreach collection="param.branchIds" item="brandId" open="(" close=")" separator=",">
                    #{brandId}
                </foreach>
            </if>
            <if test="param.patientcardno!=null and param.patientcardno!=''">
                AND pa.patientcardno LIKE concat('%',#{param.patientcardno},'%')
            </if>
            <if test="param.patientname!=null and param.patientname!=''">
                AND pa.patientname LIKE concat('%',#{param.patientname},'%')
            </if>
            <if test="param.phone!=null and param.phone!=''">
                AND pa.phone LIKE concat('%',#{param.phone},'%')
            </if>
            <if test="param.idcardno!=null and param.idcardno!=''">
                AND pa.idcardno LIKE concat('%',#{param.idcardno},'%')
            </if>
        </where>
        ORDER BY pa.createdate, patientcardno DESC
    </select>

    <!--分页查询档案列表-->
    <select id="getArchivePage" resultType="com.center.medical.bean.vo.ArchiveVo">
        SELECT a.id,
        a.patientarchiveno,
        a.patientname,
        a.id_sex,
        a.age,
        a.phone,
        m.marriage_name AS marriage,
        a.address,
        a.resarea,
        a.birthdate,
        pt.patient_name AS patientclass,
        a.idcardno
        FROM md_peispatientarchive a
        LEFT JOIN md_dictmarriage m ON m.id = a.id_marriage
        LEFT JOIN md_patienttype pt ON pt.id = a.memberlevel
        <where>
            a.is_delete = 0
            <if test="param.patientname!=null and param.patientname!=''">
                AND a.patientname LIKE concat('%',#{param.patientname},'%')
            </if>
            <if test="param.phone!=null and param.phone!=''">
                AND a.phone LIKE concat('%',#{param.phone},'%')
            </if>
            <if test="param.patientcode!=null and param.patientcode!=''">
                AND EXISTS(SELECT 1 FROM peispatient p WHERE p.patientcode LIKE concat('%',#{param.patientcode},'%') AND
                p.patientarchiveno = a.id)
            </if>
        </where>
        ORDER BY a.createdate DESC,
        a.patientname
    </select>
    <select id="getInfoByNo" resultType="com.center.medical.bean.model.Peispatientarchive">
        <include refid="selectPeispatientarchiveVo"/>
        <where>
            patientarchiveno = #{no}
        </where>
    </select>

    <!--通过体检号查询档案id-->
    <select id="getIdByPatientCode" resultType="java.lang.String">
        SELECT a.id
        FROM md_peispatientarchive a
        LEFT JOIN md_peispatient p on p.patientarchiveno = a.patientarchiveno
        <where>
            p.patientcode = #{patientcode}
        </where>
        GROUP BY a.id
    </select>

    <!--老系统通过身份证查询档案id-->
    <select id="getOldInfoByIdCardNo" resultType="java.lang.String">
        SELECT a.id
        FROM peispatientarchive a
        <where>
            a.IDCARDNO = #{idcardno}
        </where>
    </select>
</mapper>

