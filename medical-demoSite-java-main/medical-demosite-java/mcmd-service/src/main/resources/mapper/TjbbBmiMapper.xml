<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.dao.TjbbBmiMapper">

    <resultMap type="com.center.medical.bean.model.TjbbBmi" id="TjbbBmiMap">
        <id property="id" column="id"/>
        <result property="xh" column="xh"/>
        <result property="bmi" column="bmi"/>
        <result property="ckfw" column="ckfw"/>
        <result property="valueMin" column="value_min"/>
        <result property="valueMax" column="value_max"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
        <result property="createId" column="create_id"/>
        <result property="modifyId" column="modify_id"/>
        <result property="patientcode" column="patientcode"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectTjbbBmiVo">
        select id,
               xh,
               bmi,
               ckfw,
               value_min,
               value_max,
               createdate,
               modifydate,
               create_id,
               modify_id,
               patientcode
        from md_tjbb_bmi
    </sql>

    <!-- 查询列表数据 -->
    <select id="getList" resultMap="TjbbBmiMap">
        <include refid="selectTjbbBmiVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="TjbbBmiMap">
        <include refid="selectTjbbBmiVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

