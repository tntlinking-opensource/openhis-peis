<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.dao.DanagerObjectMapper">

    <resultMap type="com.center.medical.bean.model.DanagerObject" id="DanagerObjectMap">
        <id property="id" column="id"/>
        <result property="harmTypeName" column="harm_type_name"/>
        <result property="harmTypeId" column="harm_type_id"/>
        <result property="harmName" column="harm_name"/>
        <result property="harmId" column="harm_id"/>
        <result property="items" column="items"/>
        <result property="sellcustomerId" column="sellcustomer_id"/>
        <result property="orderNo" column="order_no"/>
        <result property="peopleNum" column="people_num"/>
        <result property="inspectNum" column="inspect_num"/>
        <result property="unexploredNum" column="unexplored_num"/>
        <result property="manNum" column="man_num"/>
        <result property="womenNum" column="women_num"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
        <result property="onjobType" column="onjob_type"/>
        <result property="sampleId" column="sample_id"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectDanagerObjectVo">
        select id,
               harm_type_name,
               harm_type_id,
               harm_name,
               harm_id,
               items,
               sellcustomer_id,
               order_no,
               people_num,
               inspect_num,
               unexplored_num,
               man_num,
               women_num,
               createdate,
               modifydate,
               onjob_type,
               sample_id
        from md_danager_object
    </sql>

    <!-- 查询列表数据 -->
    <select id="getList" resultMap="DanagerObjectMap">
        <include refid="selectDanagerObjectVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="DanagerObjectMap">
        <include refid="selectDanagerObjectVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

