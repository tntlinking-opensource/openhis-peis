<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.reception.dao.OutsideCheckinMapper">

    <resultMap type="com.center.medical.reception.bean.model.OutsideCheckin" id="OutsideCheckinMap">
        <id property="id" column="id"/>
        <result property="patientcode" column="patientcode"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
        <result property="idCharge" column="id_charge"/>
        <result property="status" column="status"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectOutsideCheckinVo">
        select id, patientcode, createdate, modifydate, id_charge, status
        from md_outside_checkin
    </sql>

    <!-- 查询列表数据 -->
    <select id="getList" resultMap="OutsideCheckinMap">
        <include refid="selectOutsideCheckinVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="OutsideCheckinMap">
        <include refid="selectOutsideCheckinVo"/>
        <where>
            id = #{id}
        </where>
    </select>


    <!-- 获取与图片结果关联项目 -->
    <select id="getPictureData" resultType="com.center.medical.reception.bean.vo.PictureDataVo">
        SELECT
        t.id as id,
        i.examfeeitem_name as itemName,
        i.depart_name as ksName,
        i.id as idCharge,
        t.status as status
        FROM
        md_outside_checkin t
        LEFT JOIN md_items i ON t.id_charge = i.id
        <where>
            t.patientcode = #{patientcode}
        </where>
        ORDER BY t.createdate DESC
    </select>
</mapper>

