<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.olddata.dao.MdPeispatientChargeMainMapper">

    <resultMap type="com.center.medical.olddata.bean.model.MdPeispatientChargeMain"
               id="MdPeispatientChargeMainMap">
        <id property="id" column="id"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
        <result property="note" column="note"/>
        <result property="moneyamount" column="moneyamount"/>
        <result property="moneyamountpaid" column="moneyamountpaid"/>
        <result property="patientcode" column="patientcode"/>
        <result property="version" column="version"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectMdPeispatientChargeMainVo">
        select id,
               createdate,
               modifydate,
               note,
               moneyamount,
               moneyamountpaid,
               patientcode,
               version
        from md_peispatient_charge_main
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="MdPeispatientChargeMainMap">
        <include refid="selectMdPeispatientChargeMainVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="MdPeispatientChargeMainMap">
        <include refid="selectMdPeispatientChargeMainVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

