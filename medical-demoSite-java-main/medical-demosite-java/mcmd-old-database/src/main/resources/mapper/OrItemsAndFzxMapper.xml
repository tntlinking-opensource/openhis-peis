<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.olddata.dao.OrItemsAndFzxMapper">

    <resultMap type="com.center.medical.olddata.bean.model.OrItemsAndFzx" id="ItemsAndFzxMap">
        <id property="id" column="ID"/>
        <result property="createdate" column="CREATEDATE"/>
        <result property="modifydate" column="MODIFYDATE"/>
        <result property="itemsId" column="ITEMS_ID"/>
        <result property="fzxId" column="FZX_ID"/>
        <result property="tbzt" column="TBZT"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectItemsAndFzxVo">
        select ID, CREATEDATE, MODIFYDATE, ITEMS_ID, FZX_ID, TBZT
        from ITEMS_AND_FZX
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="ItemsAndFzxMap">
        <include refid="selectItemsAndFzxVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="ItemsAndFzxMap">
        <include refid="selectItemsAndFzxVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

