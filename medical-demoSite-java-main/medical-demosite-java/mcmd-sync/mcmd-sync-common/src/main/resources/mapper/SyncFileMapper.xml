<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.sync.dao.SyncFileMapper">

    <resultMap type="com.center.medical.sync.bean.model.SyncFile" id="SyncFileMap">
        <id property="id" column="id"/>
        <result property="isAll" column="is_all"/>
        <result property="branchIds" column="branch_ids"/>
        <result property="status" column="status"/>
        <result property="imageUrl" column="image_url"/>
        <result property="optionType" column="option_type"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectSyncFileVo">
        select id,
               is_all,
               branch_ids,
               status,
               image_url,
               createdate,
               modifydate,
               option_type
        from md_sync_file
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="SyncFileMap">
        <include refid="selectSyncFileVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="SyncFileMap">
        <include refid="selectSyncFileVo"/>
        <where>
            id = #{id}
        </where>
    </select>

    <!--获取最新的一条数据-->
    <select id="getLastOne" resultType="com.center.medical.sync.bean.model.SyncFile">
        SELECT *
        FROM `md_sync_file`
        <where>
            image_url = #{param.imgUrl}
            <if test="param.branchIds != null and param.branchIds != ''">
                AND branch_ids = #{param.branchIds}
            </if>
            <if test="param.statusList!=null">
                AND status IN
                <foreach collection="param.statusList" item="st" open="(" close=")" separator=",">
                    #{st}
                </foreach>
            </if>
        </where>
        ORDER BY createdate DESC LIMIT 1
    </select>

</mapper>

