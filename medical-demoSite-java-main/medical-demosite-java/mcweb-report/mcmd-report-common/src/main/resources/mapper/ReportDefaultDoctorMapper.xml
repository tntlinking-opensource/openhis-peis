<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.report.dao.ReportDefaultDoctorMapper">

    <resultMap type="com.center.medical.report.bean.model.ReportDefaultDoctor" id="ReportDefaultDoctorMap">
        <id property="id" column="id"/>
        <result property="depId" column="dep_id"/>
        <result property="userId" column="user_id"/>
        <result property="type" column="type"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
        <result property="personnelType" column="personnel_type"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectReportDefaultDoctorVo">
        select id, dep_id, user_id, type, createdate, modifydate,personnel_type
        from md_report_default_doctor
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultType="com.center.medical.report.bean.vo.ReportDefaultDoctorVo">
        SELECT
            rdd.id,
            rdd.dep_id,
            rdd.user_id,
            rdd.type,
            rdd.createdate,
            rdd.personnel_type,
            d.dept_name,
            u.user_name
        FROM
            md_report_default_doctor rdd
                LEFT JOIN sys_dept d ON d.dept_no = rdd.dep_id
                LEFT JOIN sys_user u ON u.user_no = rdd.user_id
        <where>
            <if test="param.deptName!=null and param.deptName!=''">
                AND d.dept_name like concat('%',#{param.deptName},'%')
            </if>
            <if test="param.deptName!=null and param.deptName!=''">
                AND u.user_name like concat('%',#{param.userName},'%')
            </if>
        </where>
        ORDER BY rdd.createdate DESC
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="ReportDefaultDoctorMap">
        <include refid="selectReportDefaultDoctorVo"/>
        <where>
            id = #{id}
        </where>
    </select>


    <!-- 通过科室id和类型查询 -->
    <select id="getinfoByKsIdAndType" resultType="java.lang.String">
        select user_id
        from md_report_default_doctor
        <where>
            dep_id = #{ksId}
            and type in (#{type},2)
            and personnel_type in (#{personnelType},2)
        </where>
    </select>
</mapper>

