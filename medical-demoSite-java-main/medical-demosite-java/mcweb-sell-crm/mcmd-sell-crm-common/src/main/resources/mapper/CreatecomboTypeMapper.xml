<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.sellcrm.dao.CreatecomboTypeMapper">

    <resultMap type="com.center.medical.sellcrm.bean.model.CreatecomboType" id="CreatecomboTypeMap">
        <id property="id" column="id"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
        <result property="name" column="name"/>
        <result property="typeIndex" column="type_index"/>
        <result property="typeState" column="type_state"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectCreatecomboTypeVo">
        select id, createdate, modifydate, name, type_index, type_state
        from md_createcombo_type
    </sql>

    <!-- 查询列表数据 -->
    <select id="getList" resultMap="CreatecomboTypeMap">
        <include refid="selectCreatecomboTypeVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="CreatecomboTypeMap">
        <include refid="selectCreatecomboTypeVo"/>
        <where>
            id = #{id}
        </where>
    </select>


    <!-- 获取最小套餐分类 -->
    <select id="getTypeList" resultType="com.center.medical.sellcrm.bean.vo.TypeListVo">
        SELECT id,
               name AS text
        FROM md_createcombo_type ait
        WHERE ait.type_state = 1
        ORDER BY type_index
    </select>

</mapper>

