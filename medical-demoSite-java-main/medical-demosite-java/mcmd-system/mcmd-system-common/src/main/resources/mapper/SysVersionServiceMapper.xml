<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.system.dao.SysVersionServiceMapper">

    <resultMap type="com.center.medical.system.bean.model.SysVersionService" id="SysVersionServiceMap">
        <id property="id" column="id"/>
        <result property="serviceId" column="service_id"/>
        <result property="serviceName" column="service_name"/>
        <result property="versionId" column="version_id"/>
        <result property="serviceType" column="service_type"/>
        <result property="filePath" column="file_path"/>
        <result property="sqlFile" column="sql_file"/>
        <result property="otherFile" column="other_file"/>
        <result property="remark" column="remark"/>
        <result property="status" column="status"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectSysVersionServiceVo">
        select id,
               service_id,
               service_name,
               version_id,
               service_type,
               file_path,
               sql_file,
               other_file,
               remark,
               status,
               create_time,
               update_time
        from sys_version_service
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="SysVersionServiceMap">
        <include refid="selectSysVersionServiceVo"/>
    </select>

    <!-- 查询列表数据 -->
    <select id="getList" resultMap="SysVersionServiceMap">
        <include refid="selectSysVersionServiceVo"/>
        <where>
            <if test="param.versionId!=null">
                AND version_id = #{param.versionId}
            </if>
            <if test="param.serviceName!=null and param.serviceName!=''">
                AND service_name LIKE concat('%',#{param.serviceName},'%')
            </if>
            <if test="param.serviceId!=null">
                AND service_id = #{param.serviceId}
            </if>
            <if test="param.status!=null">
                AND status = #{param.status}
            </if>
        </where>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="SysVersionServiceMap">
        <include refid="selectSysVersionServiceVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

