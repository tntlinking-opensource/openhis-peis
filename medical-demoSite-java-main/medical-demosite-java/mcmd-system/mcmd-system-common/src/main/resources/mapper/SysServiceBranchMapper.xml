<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.system.dao.SysServiceBranchMapper">

    <resultMap type="com.center.medical.system.bean.model.SysServiceBranch" id="SysServiceBranchMap">
        <id property="id" column="id"/>
        <result property="serviceId" column="service_id"/>
        <result property="branchId" column="branch_id"/>
        <result property="isManual" column="is_manual"/>
        <result property="executer" column="executer"/>
        <result property="status" column="status"/>
        <result property="remark" column="remark"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectSysServiceBranchVo">
        select id,
               service_id,
               branch_id,
               is_manual,
               executer,
               status,
               remark,
               create_time,
               update_time
        from sys_service_branch
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="SysServiceBranchMap">
        <include refid="selectSysServiceBranchVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="SysServiceBranchMap">
        <include refid="selectSysServiceBranchVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

