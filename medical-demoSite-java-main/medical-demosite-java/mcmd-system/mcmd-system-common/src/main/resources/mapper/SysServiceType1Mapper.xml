<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.system.dao.SysServiceType1Mapper">

    <resultMap type="com.center.medical.system.bean.model.SysServiceType1" id="SysServiceTypeMap">
        <id property="serviceId" column="service_id"/>
        <result property="serviceName" column="service_name"/>
        <result property="status" column="status"/>
        <result property="remark" column="remark"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectSysServiceTypeVo">
        select service_id, service_name, status, remark, create_time, update_time
        from sys_service_type
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="SysServiceTypeMap">
        <include refid="selectSysServiceTypeVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="SysServiceTypeMap">
        <include refid="selectSysServiceTypeVo"/>
        <where>
            serviceId = #{id}
        </where>
    </select>

</mapper>

