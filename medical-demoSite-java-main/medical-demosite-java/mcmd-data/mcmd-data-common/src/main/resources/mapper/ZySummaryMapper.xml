<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.data.dao.ZySummaryMapper">

    <resultMap type="com.center.medical.data.bean.model.ZySummary" id="ZySummaryMap">
        <id property="id" column="id"/>
        <result property="serialNo" column="serial_no"/>
        <result property="occupationSummaryCode" column="occupation_summary_code"/>
        <result property="occupationSummary" column="occupation_summary"/>
        <result property="printForShort" column="print_for_short"/>
        <result property="occupationSummaryExplain" column="occupation_summary_explain"/>
        <result property="inputCode" column="input_code"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
        <result property="isDelete" column="is_delete"/>
        <result property="sort" column="sort"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectZySummaryVo">
        select id,
               serial_no,
               occupation_summary_code,
               occupation_summary,
               print_for_short,
               occupation_summary_explain,
               input_code,
               createdate,
               modifydate,
               is_delete,
               sort
        from md_zy_summary
    </sql>

    <!-- 查询列表数据 -->
    <select id="getList" resultMap="ZySummaryMap">
        <include refid="selectZySummaryVo"/>
        where is_delete = 0
        <if test="param.inputCode!=null and param.inputCode!=''">
            AND input_code like concat('%',#{param.inputCode},'%')
        </if>
        order by serial_no ASC
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="ZySummaryMap">
        <include refid="selectZySummaryVo"/>
        <where>
            id = #{id}
        </where>
    </select>

    <!-- 根据主键id获取记录详情,没被删除的 -->
    <select id="getZySummaryById" resultMap="ZySummaryMap">
        <include refid="selectZySummaryVo"/>
        <where>
            id = #{id}
            and is_delete = 0
        </where>
    </select>


</mapper>

