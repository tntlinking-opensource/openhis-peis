<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.data.dao.ItemsAndFzxMapper">

    <resultMap type="com.center.medical.data.bean.model.ItemsAndFzx" id="ItemsAndFzxMap">
        <id property="id" column="id"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
        <result property="itemsId" column="items_id"/>
        <result property="fzxId" column="fzx_id"/>
        <result property="tbzt" column="tbzt"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectItemsAndFzxVo">
        select id, createdate, modifydate, items_id, fzx_id, tbzt
        from md_items_and_fzx
    </sql>
    <!-- 插入公共收费项目分中心关联记录-->
    <insert id="addWithBrandId">
        INSERT INTO md_items_and_fzx (id, items_id, fzx_id, tbzt, createdate, modifydate)
        SELECT UPPER(REPLACE(UUID(), '-', '')),
               id,
               #{branchId},
               0,
               NOW(),
               NOW()
        FROM md_items
        WHERE is_public = 1
    </insert>

    <!-- 查询列表数据 -->
    <select id="getList" resultMap="ItemsAndFzxMap">
        <include refid="selectItemsAndFzxVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="ItemsAndFzxMap">
        <include refid="selectItemsAndFzxVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

