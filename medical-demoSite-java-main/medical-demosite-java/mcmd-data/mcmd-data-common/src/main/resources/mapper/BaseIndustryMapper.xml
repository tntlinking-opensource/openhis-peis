<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.data.dao.BaseIndustryMapper">

    <resultMap type="com.center.medical.data.bean.model.BaseIndustry" id="BaseIndustryMap">
        <id property="id" column="id"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
        <result property="category" column="category"/>
        <result property="major" column="major"/>
        <result property="middle" column="middle"/>
        <result property="sub" column="sub"/>
        <result property="arrangement" column="arrangement"/>
        <result property="interfaceCode" column="interface_code"/>
        <result property="isDelete" column="is_delete"/>
        <result property="industryName" column="industry_name"/>
        <result property="illustration" column="illustration"/>
        <result property="industryCode" column="industry_code"/>
        <result property="idx" column="idx"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectBaseIndustryVo">
        select id,
               createdate,
               modifydate,
               category,
               major,
               middle,
               sub,
               arrangement,
               interface_code,
               is_delete,
               industry_name,
               illustration,
               industry_code,
               idx
        from md_base_industry
    </sql>

    <!-- 查询列表数据 -->
    <select id="getList" resultMap="BaseIndustryMap">
        <include refid="selectBaseIndustryVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="BaseIndustryMap">
        <include refid="selectBaseIndustryVo"/>
        <where>
            id = #{id}
        </where>
    </select>


    <!-- 获取行业类别代码 -->
    <select id="getIndusData" resultType="com.center.medical.data.bean.vo.IndusDataVo">
        SELECT
            industry_name AS indusTypeName,
            <if test="level!=null and level!=''">
                <choose>
                    <when test="level == 1">
                        category
                    </when>
                    <when test="level == 2">
                        major
                    </when>
                    <when test="level == 3">
                        middle
                    </when>
                    <when test="level == 4">
                        sub
                    </when>
                    <when test="level == 5">
                        sub
                    </when>
                </choose>
                AS indusTypeCode
            </if>
        FROM
            md_base_industry
        <where>
            is_delete=0
            <if test="level!=null and level!=''">
                <choose>
                    <when test="level == 1">
                        AND arrangement = #{level}
                    </when>
                    <when test="level == 2">
                        AND arrangement = #{level}
                        AND category = #{indusTypeCode}
                    </when>
                    <when test="level == 3">
                        AND arrangement = #{level}
                        AND major = #{indusTypeCode}
                    </when>
                    <when test="level == 4">
                        AND arrangement = #{level}
                        AND middle =  #{indusTypeCode}
                    </when>
                    <when test="level == 5">
                        AND arrangement = 4
                        AND sub =  #{indusTypeCode}
                    </when>
                </choose>
            </if>
        </where>
        ORDER BY industry_name
    </select>
</mapper>

