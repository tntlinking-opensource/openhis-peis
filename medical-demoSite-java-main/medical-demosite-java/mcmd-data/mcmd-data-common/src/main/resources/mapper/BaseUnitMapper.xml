<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.data.dao.BaseUnitMapper">

    <resultMap type="com.center.medical.data.bean.model.BaseUnit" id="BaseUnitMap">
        <id property="id" column="id"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
        <result property="examCode" column="exam_code"/>
        <result property="codeNo" column="code_no"/>
        <result property="codeName" column="code_name"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectBaseUnitVo">
        select id, createdate, modifydate, exam_code, code_no, code_name
        from md_base_unit
    </sql>

    <!-- 查询列表数据 -->
    <select id="getList" resultMap="BaseUnitMap">
        <include refid="selectBaseUnitVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="BaseUnitMap">
        <include refid="selectBaseUnitVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

