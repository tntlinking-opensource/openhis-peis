<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.abteilung.dao.DrugstoreClassMapper">

    <resultMap type="com.center.medical.abteilung.bean.model.DrugstoreClass" id="DrugstoreClassMap">
        <id property="id" column="id"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
        <result property="classCode" column="class_code"/>
        <result property="className" column="class_name"/>
        <result property="shortCode" column="short_code"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectDrugstoreClassVo">
        select id, createdate, modifydate, class_code, class_name, short_code
        from md_drugstore_class
    </sql>

    <!-- 查询列表数据 -->
    <select id="getList" resultMap="DrugstoreClassMap">
        <include refid="selectDrugstoreClassVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="DrugstoreClassMap">
        <include refid="selectDrugstoreClassVo"/>
        <where>
            id = #{id}
        </where>
    </select>

    <!-- 获取类别代号下拉列表 -->
    <select id="getClassCheckData" resultType="com.center.medical.abteilung.bean.vo.ClassCheckDataVo">
        SELECT
            c.class_code as id,
            c.class_name as text
        FROM
            md_drugstore_class c
        <where>
            <if test="key!=null and key!=''">
                AND c.class_name LIKE concat('%',#{key},'%')
                OR c.short_code LIKE concat('%',#{key},'%')
            </if>
        </where>
        ORDER BY c.class_name
    </select>

</mapper>

