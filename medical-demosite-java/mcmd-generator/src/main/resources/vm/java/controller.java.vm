package ${packageName}.controller;

import java.util.ArrayList;
import java.util.List;
import com.center.medical.common.utils.page.PageParam;
import javax.servlet.http.HttpServletResponse;
import io.swagger.annotations.ApiImplicitParam;
import org.springframework.security.access.prepost.PreAuthorize;
import org.springframework.web.bind.annotation.*;
import com.center.medical.common.annotation.Log;
import com.center.medical.common.core.controller.BaseController;
import com.center.medical.common.core.domain.AjaxResult;
import com.center.medical.common.enums.BusinessType;
import io.swagger.annotations.Api;
import io.swagger.annotations.ApiOperation;
import lombok.RequiredArgsConstructor;
import lombok.extern.slf4j.Slf4j;
    ${ClassName};
import ${packageName}.service.I${ClassName}Service;
import com.center.medical.common.utils.poi.ExcelUtil;
#if($table.crud || $table.sub)
#elseif($table.tree)
#end

/**
 * ${functionName}Controller
 *
 * @author ${author}
 * @date ${datetime}
 */
@Slf4j
@RestController
@Api(tags = "${functionName}")
@RequiredArgsConstructor
@RequestMapping("/${moduleName}/${businessName}")
public class ${ClassName}Controller extends BaseController {

    private final I${ClassName}Service ${className}Service;

    /**
     * 查询${functionName}列表
     */
    @GetMapping("/list")
    @PreAuthorize("@ss.hasPermi('${permissionPrefix}:list')")
    @ApiOperation(value = "查询列表", notes = "查询${functionName}列表")
    #if($table.crud || $table.sub)
    public AjaxResult list(PageParam<${ClassName}> page, ${ClassName} param) {
        return AjaxResult.success(${className}Service.getList(page, param));
    }
    #elseif($table.tree)
    public AjaxResult list(${ClassName} param) {
        return AjaxResult.success(${className}Service.getList(null, param));
    }
    #end

    /**
     * 导出${functionName}列表
     */
    @PostMapping("/export")
    @PreAuthorize("@ss.hasPermi('${permissionPrefix}:export')")
    @ApiOperation(value = "导出列表", notes = "导出${functionName}列表")
    @Log(title = "${functionName}", businessType = BusinessType.EXPORT)
    public void export(HttpServletResponse response, ${ClassName} ${className}) {
        List<${ClassName}> list = new ArrayList(); // TODO 实现查询要导出数据列表 ${className}Service.getList(null, ${className});
        ExcelUtil<${ClassName}> util = new ExcelUtil<${ClassName}>(${ClassName}. class);
        util.exportExcel(response, list, "${functionName}数据");
    }

    /**
     * 获取${functionName}详细信息
     */
    @GetMapping(value = "/{${pkColumn.javaField}}")
    @PreAuthorize("@ss.hasPermi('${permissionPrefix}:query')")
    @ApiOperation(value = "获取详细信息", notes = "获取${functionName}详细信息")
    @ApiImplicitParam(name = "${pkColumn.javaField}", value = "主键")
    public AjaxResult getInfo(@PathVariable("${pkColumn.javaField}") ${pkColumn.javaType} ${pkColumn.javaField}) {
        return AjaxResult.success(${className}Service.getDetailById(${pkColumn.javaField}));
    }

    /**
     * 新增${functionName}
     */
    @PostMapping
    @PreAuthorize("@ss.hasPermi('${permissionPrefix}:add')")
    @ApiOperation(value = "新增${functionName}", notes = "新增${functionName}")
    @Log(title = "${functionName}", businessType = BusinessType.INSERT)
    public AjaxResult add(@RequestBody ${ClassName} ${className}) {
        return toAjax(${className}Service.insertNew(${className}));
    }

    /**
     * 修改${functionName}
     */
    @PutMapping
    @PreAuthorize("@ss.hasPermi('${permissionPrefix}:edit')")
    @ApiOperation(value = "修改${functionName}", notes = "修改${functionName}")
    @Log(title = "${functionName}", businessType = BusinessType.UPDATE)
    public AjaxResult edit(@RequestBody ${ClassName} ${className}) {
        return toAjax(${className}Service.upById(${className}));
    }

    /**
     * 删除${functionName}
     */
    @DeleteMapping("/{${pkColumn.javaField}s}")
    @PreAuthorize("@ss.hasPermi('${permissionPrefix}:remove')")
    @ApiImplicitParam(name = "${pkColumn.javaField}", value = "主键")
    @ApiOperation(value = "删除${functionName}", notes = "删除${functionName}")
    @Log(title = "${functionName}", businessType = BusinessType.DELETE)
    public AjaxResult remove(@PathVariable List<${pkColumn.javaType}> ${pkColumn.javaField}s) {
        return toAjax(${className}Service.delBy${pkColumn.capJavaField}s(${pkColumn.javaField}s));
    }
}
