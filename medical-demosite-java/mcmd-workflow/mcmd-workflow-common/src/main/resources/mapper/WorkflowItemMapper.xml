<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.workflow.dao.WorkflowItemMapper">

    <resultMap type="com.center.medical.workflow.bean.model.WorkflowItem" id="WorkflowItemMap">
        <id property="itemId" column="item_id"/>
        <result property="flowId" column="flow_id"/>
        <result property="itemName" column="item_name"/>
        <result property="userNo" column="user_no"/>
        <result property="userName" column="user_name"/>
        <result property="level" column="level"/>
        <result property="levelFlag" column="level_flag"/>
        <result property="notifyType" column="notify_type"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectWorkflowItemVo">
        select item_id,
               flow_id,
               item_name,
               user_no,
               user_name,
               level,
               level_flag,
               notify_type,
               createdate,
               modifydate
        from md_workflow_item
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="WorkflowItemMap">
        <include refid="selectWorkflowItemVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="WorkflowItemMap">
        <include refid="selectWorkflowItemVo"/>
        <where>
            itemId = #{id}
        </where>
    </select>

    <!--根据工作流ID获取节点列表-->
    <select id="getListByFlowId" resultType="com.center.medical.workflow.bean.model.WorkflowItem">
        <include refid="selectWorkflowItemVo"/>
        <where>
            flow_id = #{flowId}
        </where>
        ORDER BY `level`
    </select>

</mapper>

