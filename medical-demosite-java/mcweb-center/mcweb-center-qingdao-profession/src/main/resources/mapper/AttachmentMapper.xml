<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.center.qingdao.profession.mapper.AttachmentMapper">

    <resultMap type="com.center.medical.center.qingdao.profession.entity.dto.Attachment" id="AttachmentMap">
        <id property="id" column="id"/>
        <result property="fileSort" column="file_sort"/>
        <result property="filePath" column="file_path"/>
        <result property="fileSize" column="file_size"/>
        <result property="fileType" column="file_type"/>
        <result property="bw" column="bw"/>
        <result property="dcmPath" column="dcm_path"/>
        <result property="memo" column="memo"/>
        <result property="configId" column="config_id"/>
        <result property="inReport" column="in_report"/>
        <result property="createId" column="create_id"/>
        <result property="patientcode" column="patientcode"/>
        <result property="shortCode" column="short_code"/>
        <result property="depId" column="dep_id"/>
        <result property="feeItemId" column="fee_item_id"/>
        <result property="pacsFeeItemId" column="pacs_fee_item_id"/>
        <result property="branchId" column="branch_id"/>
        <result property="type" column="type"/>
        <result property="fileGroupId" column="file_group_id"/>
        <result property="status" column="status"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectAttachmentVo">
        select id,
               file_sort,
               file_path,
               file_size,
               file_type,
               bw,
               dcm_path,
               memo,
               config_id,
               in_report,
               create_id,
               patientcode,
               short_code,
               fee_item_id,
               pacs_fee_item_id,
               dep_id,
               branch_id,
               type,
               file_group_id,
               status,
               createdate,
               modifydate
        from md_attachment
    </sql>

    <!--根据id列表批量删除文件记录-->
    <delete id="batchDeleteByIds">
        DELETE FROM md_attachment WHERE id IN
        <foreach collection="ids" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </delete>

    <!-- 查询列表数据 -->
    <select id="getList" resultMap="AttachmentMap">
        <include refid="selectAttachmentVo"/>
        <where>
            <if test="param.patientcode != null and param.patientcode != ''">
                patientcode = #{param.patientcode}
            </if>
            <if test="param.depId != null and param.depId != ''">
                dep_id = #{param.depId}
            </if>
            <if test="param.fileType != null and param.fileType != ''">
                file_type = #{param.fileType}
            </if>
        </where>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="AttachmentMap">
        <include refid="selectAttachmentVo"/>
        <where>
            id = #{id}
        </where>
    </select>


</mapper>

