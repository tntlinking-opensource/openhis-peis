<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.pacslis.dao.PacsBasePartMapper">

    <resultMap type="com.center.medical.pacslis.bean.model.PacsBasePart" id="PacsBasePartMap">
        <id property="id" column="id"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
        <result property="partName" column="part_name"/>
        <result property="inputCode" column="input_code"/>
        <result property="partSort" column="part_sort"/>
        <result property="pid" column="pid"/>
        <result property="enName" column="en_name"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectPacsBasePartVo">
        select id,
               createdate,
               modifydate,
               part_name,
               input_code,
               part_sort,
               pid,
               en_name
        from md_pacs_base_part
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="PacsBasePartMap">
        select id,
               createdate,
               modifydate,
               part_name,
               input_code,
               part_sort,
               pid,
               en_name
        from md_pacs_base_part
        order by part_sort asc
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="PacsBasePartMap">
        <include refid="selectPacsBasePartVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

