<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.data.dao.OccupationDiseastMapper">

    <resultMap type="com.center.medical.data.bean.model.OccupationDiseast" id="OccupationDiseastMap">
        <id property="id" column="id"/>
        <result property="occupationDiseastCode" column="occupation_diseast_code"/>
        <result property="occupationDiseast" column="occupation_diseast"/>
        <result property="inputCode" column="input_code"/>
        <result property="dbUser" column="db_user"/>
        <result property="occupationDiseastClass" column="occupation_diseast_class"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
        <result property="isDelete" column="is_delete"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectOccupationDiseastVo">
        select id,
               occupation_diseast_code,
               occupation_diseast,
               input_code,
               db_user,
               occupation_diseast_class,
               createdate,
               modifydate,
               is_delete
        from md_occupation_diseast
    </sql>

    <!-- 查询列表数据 -->
    <select id="getList" resultType="com.center.medical.data.bean.model.OccupationDiseast">
        select md.id,
        md.occupation_diseast_code,
        md.occupation_diseast,
        md.input_code,
        md.db_user,
        md.occupation_diseast_class,
        md.createdate,
        md.modifydate,
        md.is_delete,
        modc.occupation_diseast_class_name
        from md_occupation_diseast md
        LEFT JOIN md_occupation_diseast_class modc ON modc.id = md.occupation_diseast_class
        where md.is_delete = 0
        <if test="param.inputCode!=null and param.inputCode!=''">
            AND md.input_code like concat('%',#{param.inputCode},'%')
        </if>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="OccupationDiseastMap">
        <include refid="selectOccupationDiseastVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

