<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.data.dao.BaseAdiconExamItemCodeMapper">

    <resultMap type="com.center.medical.data.bean.model.BaseAdiconExamItemCode" id="BaseAdiconExamItemCodeMap">
        <id property="id" column="id"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
        <result property="itemCode" column="item_code"/>
        <result property="itemName" column="item_name"/>
        <result property="inputCode" column="input_code"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectBaseAdiconExamItemCodeVo">
        select id, createdate, modifydate, item_code, item_name, input_code
        from md_base_adicon_exam_item_code
    </sql>

    <!-- 查询列表数据 -->
    <select id="getList" resultMap="BaseAdiconExamItemCodeMap">
        <include refid="selectBaseAdiconExamItemCodeVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="BaseAdiconExamItemCodeMap">
        <include refid="selectBaseAdiconExamItemCodeVo"/>
        <where>
            id = #{id}
        </where>
    </select>


    <!-- 通过输入码查询艾迪康项目代码表 -->
    <select id="getAdiconSelectData" resultType="com.center.medical.data.bean.vo.AdiconSelectVo">
        SELECT item_code AS id,
        item_name AS text
        FROM md_base_adicon_exam_item_code
        <where>
            <if test="key!=null and key!=''">
                AND input_code like concat('%',#{key},'%')
            </if>
        </where>
        ORDER BY item_name
    </select>
</mapper>

