<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.data.dao.BaseZoneMapper">

    <resultMap type="com.center.medical.data.bean.model.BaseZone" id="BaseZoneMap">
        <id property="id" column="id"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
        <result property="zoneCode" column="zone_code"/>
        <result property="zoneName" column="zone_name"/>
        <result property="zoneLevel" column="zone_level"/>
        <result property="pcode" column="pcode"/>
        <result property="isDelete" column="is_delete"/>
        <result property="qingdaoCode" column="qingdao_code"/>
        <result property="qingdaoPcode" column="qingdao_pcode"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectBaseZoneVo">
        select id,
               createdate,
               modifydate,
               zone_code,
               zone_name,
               zone_level,
               pcode,
               is_delete,
               qingdao_code,
               qingdao_pcode
        from md_base_zone
    </sql>

    <!-- 查询列表数据 -->
    <select id="getList" resultMap="BaseZoneMap">
        <include refid="selectBaseZoneVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="BaseZoneMap">
        <include refid="selectBaseZoneVo"/>
        <where>
            id = #{id}
        </where>
    </select>


    <!-- 所属地区信息 -->
    <select id="getZoneSql" resultType="com.center.medical.data.bean.vo.ZoneVo">
        SELECT
            zone_code,
            zone_name,
            qingdao_code
        FROM
            md_base_zone
        <where>
            is_delete = 0
            <if test="area!=null and area==1">
                <if test="zoneCode!=null and zoneCode=='3702000000'">
                    AND qingdao_code IS NOT NULL
                </if>
            </if>
            <if test="zoneCode!=null and zoneCode!=''">
                AND pcode = #{zoneCode}
            </if>
            <if test="level!=null and level!=''">
                AND zone_level = #{level}
            </if>
        </where>
        ORDER BY -QINGDAO_CODE Desc
    </select>

</mapper>

