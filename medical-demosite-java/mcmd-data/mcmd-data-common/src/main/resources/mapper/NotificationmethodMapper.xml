<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.data.dao.NotificationmethodMapper">

    <resultMap type="com.center.medical.data.bean.model.Notificationmethod" id="NotificationmethodMap">
        <id property="id" column="id"/>
        <result property="methodName" column="method_name"/>
        <result property="inputCode" column="input_code"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
        <result property="creater" column="creater"/>
        <result property="isDelete" column="is_delete"/>
        <result property="isSendNotice" column="is_send_notice"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectNotificationmethodVo">
        select id,
               method_name,
               input_code,
               createdate,
               modifydate,
               creater,
               is_delete,
               is_send_notice
        from md_notificationmethod
    </sql>

    <!-- 查询列表数据 -->
    <select id="getList" resultMap="NotificationmethodMap">
        <include refid="selectNotificationmethodVo"/>
        where is_delete = 0
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="NotificationmethodMap">
        <include refid="selectNotificationmethodVo"/>
        <where>
            id = #{id}
        </where>
    </select>

    <!-- 获取所有的通知方式 -->
    <select id="getIssueWayData" resultType="com.center.medical.data.bean.vo.NotificationmethodVo">
        select id,
               method_name,
               input_code
        from md_notificationmethod
    </select>

</mapper>

