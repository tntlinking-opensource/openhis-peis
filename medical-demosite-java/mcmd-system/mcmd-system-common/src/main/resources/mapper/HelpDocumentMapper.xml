<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.system.dao.HelpDocumentMapper">

    <resultMap type="com.center.medical.system.bean.model.HelpDocument" id="HelpDocumentMap">
        <id property="id" column="id"/>
        <result property="type" column="type"/>
        <result property="documentname" column="documentName"/>
        <result property="urlPdf" column="url_pdf"/>
        <result property="isDelete" column="is_delete"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectHelpDocumentVo">
        select id, type, documentName, url_pdf, is_delete, createdate, modifydate
        from md_help_document
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="HelpDocumentMap">
        <include refid="selectHelpDocumentVo"/>
        <where>
            is_delete = 0
        </where>
        ORDER BY createdate DESC
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="HelpDocumentMap">
        <include refid="selectHelpDocumentVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

