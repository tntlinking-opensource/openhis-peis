<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.reservation.dao.ReservationGroupCodeMapper">

    <resultMap type="com.center.medical.reservation.bean.model.ReservationGroupCode" id="ReservationGroupCodeMap">
        <id property="id" column="id"/>
        <result property="extractedCode" column="extracted_code"/>
        <result property="groupId" column="group_id"/>
        <result property="idOrg" column="id_org"/>
        <result property="idPatientclass" column="id_patientclass"/>
        <result property="expirationDate" column="expiration_date"/>
        <result property="expirationTime" column="expiration_time"/>
        <result property="status" column="status"/>
        <result property="createdate" column="createdate"/>
        <result property="createId" column="create_id"/>
        <result property="modifydate" column="modifydate"/>
        <result property="modifyId" column="modify_id"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectReservationGroupCodeVo">
        select id,
               extracted_code,
               group_id,
               id_org,
               id_patientclass,
               expiration_date,
               expiration_time,
               status,
               createdate,
               create_id,
               modifydate,
               modify_id
        from md_reservation_group_code
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="ReservationGroupCodeMap">
        <include refid="selectReservationGroupCodeVo"/>
        <where>
            <if test="param.idOrg!=null and param.idOrg!=''">
                AND id_org = #{param.idOrg}
            </if>
        </where>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="ReservationGroupCodeMap">
        <include refid="selectReservationGroupCodeVo"/>
        <where>
            id = #{id}
        </where>
    </select>


    <!-- 根据主键id获取记录详情 -->
    <select id="getPriceByGroupId" resultType="java.lang.Double">
        SELECT
            tc.zhjg
        FROM
            md_peisorgreservationgroup pg
            left JOIN (
                SELECT
                    cm.id,
                    cm.zhjg
                FROM
                    md_createmeal cm UNION ALL
                SELECT
                    cc.id,
                    cc.zhjg
                FROM
                    md_createcombo cc
            ) tc ON tc.id = pg.id_examsuite
        WHERE
            pg.id = #{groupId}
    </select>
</mapper>

