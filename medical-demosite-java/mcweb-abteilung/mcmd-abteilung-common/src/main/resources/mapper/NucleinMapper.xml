<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.abteilung.dao.NucleinMapper">

    <resultMap type="com.center.medical.abteilung.bean.model.Nuclein" id="NucleinMap">
        <id property="id" column="id"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
        <result property="patientcode" column="patientcode"/>
        <result property="creater" column="creater"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectNucleinVo">
        select id, createdate, modifydate, patientcode, creater
        from md_nuclein
    </sql>

    <!-- 查询列表数据 -->
    <select id="getList" resultMap="NucleinMap">
        <include refid="selectNucleinVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="NucleinMap">
        <include refid="selectNucleinVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

