<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.appadmin.dao.MdSysBranchMapper">

    <resultMap type="com.center.medical.appadmin.bean.model.MdSysBranch" id="MdSysBranchMap">
        <id property="id" column="id"/>
        <result property="branchId" column="branch_id"/>
        <result property="fzx" column="fzx"/>
        <result property="jm" column="jm"/>
        <result property="pid" column="pid"/>
        <result property="isDelete" column="is_delete"/>
        <result property="address" column="address"/>
        <result property="branchType" column="branch_type"/>
        <result property="lng" column="lng"/>
        <result property="lat" column="lat"/>
        <result property="tel" column="tel"/>
        <result property="province" column="province"/>
        <result property="city" column="city"/>
        <result property="area" column="area"/>
        <result property="inspectInfo" column="inspect_info"/>
        <result property="pics" column="pics"/>
        <result property="introduce" column="introduce"/>
        <result property="qtInfo" column="qt_info"/>
        <result property="picture" column="picture"/>
        <result property="isShow" column="is_show"/>
        <result property="needReservation" column="need_reservation"/>
        <result property="branchSort" column="branch_sort"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectMdSysBranchVo">
        select id,
               branch_id,
               fzx,
               jm,
               pid,
               is_delete,
               address,
               branch_type,
               lng,
               lat,
               tel,
               province,
               city,
               area,
               inspect_info,
               pics,
               introduce,
               qt_info,
               picture,
               is_show,
               need_reservation,
               branch_sort,
               create_time,
               update_time
        from md_sys_branch
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="MdSysBranchMap">
        <include refid="selectMdSysBranchVo"/>
        <where>
            is_delete = 0
            <if test="param.fzx!=null and param.fzx!=''">
                AND fzx like concat('%',#{param.fzx},'%')
            </if>
            <if test="param.isShow!=null">
                AND is_show = #{param.isShow}
            </if>
        </where>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="MdSysBranchMap">
        <include refid="selectMdSysBranchVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

