<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.appadmin.dao.IndexImgMapper">

    <resultMap type="com.center.medical.appadmin.bean.model.IndexImg" id="IndexImgMap">
        <id property="imgId" column="img_id"/>
        <result property="branchId" column="branch_id"/>
        <result property="imgUrl" column="img_url"/>
        <result property="des" column="des"/>
        <result property="title" column="title"/>
        <result property="link" column="link"/>
        <result property="status" column="status"/>
        <result property="seq" column="seq"/>
        <result property="uploadTime" column="upload_time"/>
        <result property="relation" column="relation"/>
        <result property="type" column="type"/>
        <result property="imgType" column="img_type"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectIndexImgVo">
        select img_id,
               branch_id,
               img_url,
               des,
               title,
               link,
               status,
               seq,
               upload_time,
               relation,
               type,
               img_type
        from md_index_img
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultType="com.center.medical.appadmin.bean.model.IndexImg">
        SELECT
            ii.img_id,
            ii.branch_id,
            ii.img_url,
            ii.des,
            ii.title,
            ii.link,
            ii.status,
            ii.seq,
            ii.upload_time,
            ii.relation,
            ii.type,
            ii.img_type,
            sb.fzx
        FROM
            md_index_img ii
            left join md_sys_branch sb on sb.branch_id = ii.branch_id
        <where>
            1 = 1
            <if test="param.branchId!=null and param.branchId!=''">
                AND ii.branch_id = #{param.branchId}
            </if>
            <if test="param.status!=null">
                AND ii.status = #{param.status}
            </if>
        </where>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="IndexImgMap">
        <include refid="selectIndexImgVo"/>
        <where>
            img_id = #{id}
        </where>
    </select>

</mapper>

