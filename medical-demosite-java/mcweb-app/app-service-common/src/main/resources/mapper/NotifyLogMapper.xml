<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.center.medical.app.dao.NotifyLogMapper">

    <resultMap id="notifyLogMap" type="com.center.medical.app.bean.model.NotifyLog">
        <id column="log_id" property="logId"/>
        <result column="nick_name" property="nickName"/>
        <result column="remind_id" property="remindId"/>
        <result column="remind_type" property="remindType"/>
        <result column="remind_type" property="userMobile"/>
        <result column="template_id" property="templateId"/>
        <result column="message" property="message"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <select id="listUnSendMsgList" resultType="com.center.medical.app.bean.model.NotifyLog">
        SELECT nl.*, nt.template_code, nt.mp_code
        FROM `md_notify_log` nl
                 LEFT JOIN md_notify_template nt ON nt.`template_id` = nl.`template_id`
        where nl.status = 0
          and (remind_type = 1 or remind_type = 2)
    </select>

</mapper>
