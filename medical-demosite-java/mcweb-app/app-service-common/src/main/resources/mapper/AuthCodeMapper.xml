<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.app.dao.AuthCodeMapper">

    <resultMap type="com.center.medical.app.bean.model.AuthCode" id="AuthCodeMap">
        <id property="id" column="id"/>
        <result property="codeType" column="code_type"/>
        <result property="authCode" column="auth_code"/>
        <result property="bizAuthCode" column="biz_auth_code"/>
        <result property="keyText" column="key_text"/>
        <result property="valueText" column="value_text"/>
        <result property="authFlag" column="auth_flag"/>
        <result property="remark" column="remark"/>
        <result property="expiryDate" column="expiry_date"/>
        <result property="status" column="status"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectAuthCodeVo">
        select id,
               code_type,
               auth_code,
               biz_auth_code,
               key_text,
               value_text,
               auth_flag,
               remark,
               expiry_date,
               status,
               createdate,
               modifydate
        from md_auth_code
    </sql>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="AuthCodeMap">
        <include refid="selectAuthCodeVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

