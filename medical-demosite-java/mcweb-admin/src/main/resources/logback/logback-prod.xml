<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="true">
    <!-- 项目名称 -->
    <property name="PROJECT_NAME" value="mcweb-admin"/>
    <!--定义日志文件的存储地址 勿在 LogBack 的配置中使用相对路径-->
    <property name="LOG_HOME" value="logs"/>

    <!-- 控制台输出 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <withJansi>false</withJansi>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <!-- 格式化输出: %d: 日期; %-5level: 级别从左显示5个字符宽度; %thread: 线程名; %logger: 类名; %M: 方法名; %line: 行号; %msg: 日志消息; %n: 换行符 -->
            <pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS}] [%-5level] [%thread] [%logger{50}] [%M] [%line] - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- INFO日志文件，用于记录重要日志信息 -->
    <appender name="INFO_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/${PROJECT_NAME}.log</file>
        <!-- 过滤器，只打印INFO级别的日志 -->
        <!--        <filter class="ch.qos.logback.classic.filter.LevelFilter">-->
        <!--            <level>INFO</level>-->
        <!--            <onMatch>ACCEPT</onMatch>-->
        <!--            <onMismatch>DENY</onMismatch>-->
        <!--        </filter>-->
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!--日志文件输出的文件名-->
            <FileNamePattern>${LOG_HOME}/%d{yyyy-MM-dd}/${PROJECT_NAME}.%i.zip</FileNamePattern>
            <!--日志文件保留天数-->
            <MaxHistory>30</MaxHistory>
            <!--日志文件最大的大小-->
            <MaxFileSize>10MB</MaxFileSize>
        </rollingPolicy>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <!-- 格式化输出: %d: 日期; %-5level: 级别从左显示5个字符宽度; %thread: 线程名; %logger: 类名; %M: 方法名; %line: 行号; %msg: 日志消息; %n: 换行符 -->
            <pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS}] [%-5level] [%thread] [%logger{50}] [%M] [%line] - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- 数据同步日志文件，用于记录数据同步信息 -->
    <appender name="SYNC_INFO_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/${PROJECT_NAME}-sync.log</file>
        <!-- 过滤器，只打印INFO级别的日志 -->
        <!--        <filter class="ch.qos.logback.classic.filter.LevelFilter">-->
        <!--            <level>INFO</level>-->
        <!--            <onMatch>ACCEPT</onMatch>-->
        <!--            <onMismatch>DENY</onMismatch>-->
        <!--        </filter>-->
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!--日志文件输出的文件名-->
            <FileNamePattern>${LOG_HOME}/%d{yyyy-MM-dd}/${PROJECT_NAME}-sync.%i.zip</FileNamePattern>
            <!--日志文件保留天数-->
            <MaxHistory>14</MaxHistory>
            <!--日志文件最大的大小-->
            <MaxFileSize>100MB</MaxFileSize>
        </rollingPolicy>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <!-- 格式化输出: %d: 日期; %-5level: 级别从左显示5个字符宽度; %thread: 线程名; %logger: 类名; %M: 方法名; %line: 行号; %msg: 日志消息; %n: 换行符 -->
            <pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS}] [%-5level] [%thread] [%logger{50}] [%M] [%line] - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- 线上向线下发送请求，用于请求信息 -->
    <appender name="LOCAL_CONSUMER_INFO_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/${PROJECT_NAME}-consumer.log</file>
        <!-- 过滤器，只打印INFO级别的日志 -->
        <!--        <filter class="ch.qos.logback.classic.filter.LevelFilter">-->
        <!--            <level>INFO</level>-->
        <!--            <onMatch>ACCEPT</onMatch>-->
        <!--            <onMismatch>DENY</onMismatch>-->
        <!--        </filter>-->
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!--日志文件输出的文件名-->
            <FileNamePattern>${LOG_HOME}/%d{yyyy-MM-dd}/${PROJECT_NAME}-consumer.%i.zip</FileNamePattern>
            <!--日志文件保留天数-->
            <MaxHistory>14</MaxHistory>
            <!--日志文件最大的大小-->
            <MaxFileSize>10MB</MaxFileSize>
        </rollingPolicy>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <!-- 格式化输出: %d: 日期; %-5level: 级别从左显示5个字符宽度; %thread: 线程名; %logger: 类名; %M: 方法名; %line: 行号; %msg: 日志消息; %n: 换行符 -->
            <pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS}] [%-5level] [%thread] [%logger{50}] [%M] [%line] - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!--将数据同步日志单独输出到指定文件-->
    <logger name="com.center.medical.synclc" additivity="false" level="INFO">
        <appender-ref ref="SYNC_INFO_FILE"/>
    </logger>
    <logger name="com.center.medical.syncpf" additivity="false" level="INFO">
        <appender-ref ref="SYNC_INFO_FILE"/>
    </logger>
    <logger name="com.center.medical.sync" additivity="false" level="INFO">
        <appender-ref ref="SYNC_INFO_FILE"/>
    </logger>
    <logger name="com.center.medical.framework.interceptor.SyncDataInterceptor" additivity="false" level="INFO">
        <appender-ref ref="SYNC_INFO_FILE"/>
    </logger>
    <logger name="com.center.medical.messagelc.config.LocalSyncConsumer" additivity="false" level="INFO">
        <appender-ref ref="SYNC_INFO_FILE"/>
    </logger>
    <logger name="com.center.medical.messagelc.config.LocalConsumer" additivity="false" level="INFO">
        <appender-ref ref="LOCAL_CONSUMER_INFO_FILE"/>
    </logger>
    <logger name="com.center.medical.abteilung.service.impl.BoyingBusinessLocalServiceImpl" additivity="false" level="INFO">
        <appender-ref ref="LOCAL_CONSUMER_INFO_FILE"/>
    </logger>

    <!--    输出info信息到控制台，包括DEBUG及以上级别-->
    <logger name="com.center.medical" additivity="false" level="BEDUG">
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- 输出info信息到文件，包括INFO及以上级别 -->
    <logger name="com.center.medical" additivity="false" level="INFO">
        <appender-ref ref="INFO_FILE"/>
    </logger>

    <!-- 不记录日志 -->
    <logger name="springfox.documentation.swagger2" level="off"/>
    <logger name="io.swagger.models.parameters" level="off"/>
    <logger name="springfox.documentation.spring.web.readers.operation" level="off"/>

    <!-- 生产环境下的日志配置 -->
    <springProfile name="prod">
        <root level="info">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="INFO_FILE"/>
        </root>
    </springProfile>
</configuration>
