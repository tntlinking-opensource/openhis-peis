<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.sync.dao.SyncDataMapper">

    <resultMap type="com.center.medical.sync.bean.model.SyncData" id="SyncDataMap">
        <id property="id" column="id"/>
        <result property="dataType" column="data_type"/>
        <result property="optType" column="opt_type"/>
        <result property="version" column="version"/>
        <result property="bizDb" column="biz_db"/>
        <result property="bizTable" column="biz_table"/>
        <result property="bizId" column="biz_id"/>
        <result property="bizModifydate" column="biz_modifydate"/>
        <result property="isAll" column="is_all"/>
        <result property="branchIds" column="branch_ids"/>
        <result property="status" column="status"/>
        <result property="remark" column="remark"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectSyncDataVo">
        select id,
               data_type,
               opt_type,
               version,
               biz_db,
               biz_table,
               biz_id,
               biz_modifydate,
               is_all,
               branch_ids,
               status,
               remark,
               createdate,
               modifydate
        from md_sync_data
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="SyncDataMap">
        <include refid="selectSyncDataVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="SyncDataMap">
        <include refid="selectSyncDataVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

