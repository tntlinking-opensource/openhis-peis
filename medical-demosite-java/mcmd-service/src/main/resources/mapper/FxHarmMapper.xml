<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.dao.FxHarmMapper">

    <resultMap type="com.center.medical.bean.model.FxHarm" id="FxHarmMap">
        <id property="id" column="id"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
        <result property="harmId" column="harm_id"/>
        <result property="sampleId" column="sample_id"/>
        <result property="personNum" column="person_num"/>
        <result property="harmName" column="harm_name"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectFxHarmVo">
        select id, createdate, modifydate, harm_id, sample_id, person_num, harm_name
        from md_fx_harm
    </sql>

    <!-- 查询列表数据 -->
    <select id="getList" resultMap="FxHarmMap">
        <include refid="selectFxHarmVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="FxHarmMap">
        <include refid="selectFxHarmVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

