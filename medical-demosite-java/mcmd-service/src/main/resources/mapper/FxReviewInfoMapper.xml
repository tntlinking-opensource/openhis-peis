<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.dao.FxReviewInfoMapper">

    <resultMap type="com.center.medical.bean.model.FxReviewInfo" id="FxReviewInfoMap">
        <id property="id" column="id"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
        <result property="harmId" column="harm_id"/>
        <result property="harmName" column="harm_name"/>
        <result property="diagnosis" column="diagnosis"/>
        <result property="num" column="num"/>
        <result property="summaryText" column="summary_text"/>
        <result property="sampleId" column="sample_id"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectFxReviewInfoVo">
        select id,
               createdate,
               modifydate,
               harm_id,
               harm_name,
               diagnosis,
               num,
               summary_text,
               sample_id
        from md_fx_review_info
    </sql>

    <!-- 查询列表数据 -->
    <select id="getList" resultMap="FxReviewInfoMap">
        <include refid="selectFxReviewInfoVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="FxReviewInfoMap">
        <include refid="selectFxReviewInfoVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

