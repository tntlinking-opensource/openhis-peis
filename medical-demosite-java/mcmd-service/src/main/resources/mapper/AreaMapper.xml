<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.dao.AreaMapper">

    <resultMap type="com.center.medical.bean.model.Area" id="AreaMap">
        <id property="id" column="id"/>
        <result property="resarea" column="resarea"/>
        <result property="inputCode" column="input_code"/>
        <result property="areaCode" column="area_code"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
        <result property="isDefault" column="is_default"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectAreaVo">
        select id, resarea, input_code, area_code, createdate, modifydate, is_default
        from md_area
    </sql>

    <!-- 查询列表数据 -->
    <select id="getList" resultMap="AreaMap">
        <include refid="selectAreaVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="AreaMap">
        <include refid="selectAreaVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

