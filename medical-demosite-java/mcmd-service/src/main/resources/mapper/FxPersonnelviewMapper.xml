<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.dao.FxPersonnelviewMapper">

    <resultMap type="com.center.medical.bean.model.FxPersonnelview" id="FxPersonnelviewMap">
        <id property="id" column="id"/>
        <result property="patientcode" column="patientcode"/>
        <result property="sampleId" column="sample_id"/>
        <result property="positives" column="positives"/>
        <result property="summaryText" column="summary_text"/>
        <result property="summarySerialno" column="summary_serialno"/>
        <result property="occupationSummary" column="occupation_summary"/>
        <result property="patientname" column="patientname"/>
        <result property="sex" column="sex"/>
        <result property="age" column="age"/>
        <result property="jhgl" column="jhgl"/>
        <result property="jhys" column="jhys"/>
        <result property="jhysIds" column="jhys_ids"/>
        <result property="trades" column="trades"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
        <result property="idcardno" column="idcardno"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectFxPersonnelviewVo">
        select id,
               patientcode,
               sample_id,
               positives,
               summary_text,
               summary_serialno,
               occupation_summary,
               patientname,
               sex,
               age,
               jhgl,
               jhys,
               jhys_ids,
               trades,
               createdate,
               modifydate,
               idcardno
        from md_fx_personnelview
    </sql>

    <!-- 查询列表数据 -->
    <select id="getList" resultMap="FxPersonnelviewMap">
        <include refid="selectFxPersonnelviewVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="FxPersonnelviewMap">
        <include refid="selectFxPersonnelviewVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

