<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.dao.ReceiptTypeMapper">

    <resultMap type="com.center.medical.bean.model.ReceiptType" id="ReceiptTypeMap">
        <id property="id" column="id"/>
        <result property="receiptTypeName" column="receipt_type_name"/>
        <result property="receiptTypeCode" column="receipt_type_code"/>
        <result property="inputCode" column="input_code"/>
        <result property="note" column="note"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectReceiptTypeVo">
        select id, receipt_type_name, receipt_type_code, input_code, note, createdate, modifydate
        from md_receipt_type
    </sql>

    <!-- 查询列表数据 -->
    <select id="getList" resultMap="ReceiptTypeMap">
        <include refid="selectReceiptTypeVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="ReceiptTypeMap">
        <include refid="selectReceiptTypeVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

