<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.dao.FollowUpMapper">

    <resultMap type="com.center.medical.bean.model.FollowUp" id="FollowUpMap">
        <id property="id" column="id"/>
        <result property="followUpCode" column="follow_up_code"/>
        <result property="followUpName" column="follow_up_name"/>
        <result property="inputCode" column="input_code"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectFollowUpVo">
        select id, follow_up_code, follow_up_name, input_code, createdate, modifydate
        from md_follow_up
    </sql>

    <!-- 查询列表数据 -->
    <select id="getList" resultMap="FollowUpMap">
        <include refid="selectFollowUpVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="FollowUpMap">
        <include refid="selectFollowUpVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

