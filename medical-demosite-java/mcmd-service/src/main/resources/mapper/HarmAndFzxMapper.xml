<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.dao.HarmAndFzxMapper">

    <resultMap type="com.center.medical.bean.model.HarmAndFzx" id="HarmAndFzxMap">
        <id property="id" column="id"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
        <result property="harmId" column="harm_id"/>
        <result property="fzxId" column="fzx_id"/>
        <result property="tbzt" column="tbzt"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectHarmAndFzxVo">
        select id, createdate, modifydate, harm_id, fzx_id, tbzt
        from md_harm_and_fzx
    </sql>

    <!-- 查询列表数据 -->
    <select id="getList" resultMap="HarmAndFzxMap">
        <include refid="selectHarmAndFzxVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="HarmAndFzxMap">
        <include refid="selectHarmAndFzxVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

