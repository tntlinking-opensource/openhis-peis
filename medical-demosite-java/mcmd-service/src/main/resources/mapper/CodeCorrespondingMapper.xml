<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.dao.CodeCorrespondingMapper">

    <resultMap type="com.center.medical.bean.model.CodeCorresponding" id="CodeCorrespondingMap">
        <id property="id" column="id"/>
        <result property="oldCode" column="old_code"/>
        <result property="newCode" column="new_code"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectCodeCorrespondingVo">
        select id, old_code, new_code, createdate, modifydate
        from md_code_corresponding
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="CodeCorrespondingMap">
        <include refid="selectCodeCorrespondingVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="CodeCorrespondingMap">
        <include refid="selectCodeCorrespondingVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

