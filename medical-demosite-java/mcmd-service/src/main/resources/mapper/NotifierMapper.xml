<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.dao.NotifierMapper">

    <resultMap type="com.center.medical.bean.model.Notifier" id="NotifierMap">
        <id property="id" column="id"/>
        <result property="reportId" column="report_id"/>
        <result property="notifierId" column="notifier_id"/>
        <result property="notificationMode" column="notification_mode"/>
        <result property="notificationDetails" column="notification_details"/>
        <result property="notificationTime" column="notification_time"/>
        <result property="notificationResult" column="notification_result"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
        <result property="memo" column="memo"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectNotifierVo">
        select id,
               report_id,
               notifier_id,
               notification_mode,
               notification_details,
               notification_time,
               notification_result,
               createdate,
               modifydate,
               memo
        from md_notifier
    </sql>

    <!-- 查询列表数据 -->
    <select id="getList" resultMap="NotifierMap">
        <include refid="selectNotifierVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="NotifierMap">
        <include refid="selectNotifierVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

