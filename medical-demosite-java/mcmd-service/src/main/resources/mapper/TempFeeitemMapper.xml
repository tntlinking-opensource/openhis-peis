<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.dao.TempFeeitemMapper">

    <resultMap type="com.center.medical.bean.model.TempFeeitem" id="TempFeeitemMap">
        <id property="id" column="id"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
        <result property="itemId" column="item_id"/>
        <result property="doctorUsername" column="doctor_username"/>
        <result property="price" column="price"/>
        <result property="remarks" column="remarks"/>
        <result property="patientcode" column="patientcode"/>
        <result property="isDelete" column="is_delete"/>
        <result property="feeitemId" column="feeitem_id"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectTempFeeitemVo">
        select id,
               createdate,
               modifydate,
               item_id,
               doctor_username,
               price,
               remarks,
               patientcode,
               is_delete,
               feeitem_id
        from md_temp_feeitem
    </sql>

    <!-- 查询列表数据 -->
    <select id="getList" resultMap="TempFeeitemMap">
        <include refid="selectTempFeeitemVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="TempFeeitemMap">
        <include refid="selectTempFeeitemVo"/>
        <where>
            id = #{id}
        </where>
    </select>


    <!-- 查询列表数据 -->
    <select id="getTempFeeitem" resultType="com.center.medical.bean.dto.GetTempFeeitemDto">
        SELECT tp.id,
               tp.item_id,
               i.examfeeitem_name,
               tp.doctor_username,
               tp.price,
               tp.remarks,
               tp.patientcode,
               tp.feeitem_id,
               tp.createdate,
               i.id_depart,
               d.dept_name as ssks
        FROM md_temp_feeitem tp
                 INNER JOIN md_items i ON i.id = tp.item_id
                 INNER JOIN sys_dept d ON d.dept_no = i.id_depart
        <where>
            tp.is_delete = 0
            <if test="param.patientcode!=null and param.patientcode!=''">
                AND tp.patientcode = #{param.patientcode}
            </if>
            <if test="param.userName!=null and param.userName!=''">
                AND tp.doctor_username = #{param.userName}
            </if>
        </where>

    </select>
</mapper>

