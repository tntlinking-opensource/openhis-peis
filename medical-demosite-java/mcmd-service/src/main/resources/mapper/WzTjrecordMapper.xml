<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.dao.WzTjrecordMapper">

    <resultMap type="com.center.medical.bean.model.WzTjrecord" id="WzTjrecordMap">
        <id property="id" column="id"/>
        <result property="djls" column="djls"/>
        <result property="patientcode" column="patientcode"/>
        <result property="amount" column="amount"/>
        <result property="createDate" column="create_date"/>
        <result property="regimentationNote" column="regimentation_note"/>
        <result property="dbUser" column="db_user"/>
        <result property="remark" column="remark"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
        <result property="createId" column="create_id"/>
        <result property="modifyId" column="modify_id"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectWzTjrecordVo">
        select id,
               djls,
               patientcode,
               amount,
               create_date,
               regimentation_note,
               db_user,
               remark,
               createdate,
               modifydate,
               create_id,
               modify_id
        from md_wz_tjrecord
    </sql>

    <!-- 查询列表数据 -->
    <select id="getList" resultMap="WzTjrecordMap">
        <include refid="selectWzTjrecordVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="WzTjrecordMap">
        <include refid="selectWzTjrecordVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

