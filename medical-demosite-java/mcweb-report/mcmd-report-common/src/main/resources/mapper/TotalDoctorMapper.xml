<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.report.dao.TotalDoctorMapper">

    <resultMap type="com.center.medical.report.bean.model.TotalDoctor" id="TotalDoctorMap">
        <id property="id" column="id"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
        <result property="totalId" column="total_id"/>
        <result property="userId" column="user_id"/>
        <result property="type" column="type"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectTotalDoctorVo">
        select id, createdate, modifydate, total_id, user_id, type
        from md_total_doctor
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="TotalDoctorMap">
        <include refid="selectTotalDoctorVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="TotalDoctorMap">
        <include refid="selectTotalDoctorVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

