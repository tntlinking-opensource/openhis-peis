<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.sellcrm.dao.SellOutsideMapper">

    <resultMap type="com.center.medical.sellcrm.bean.model.SellOutside" id="SellOutsideMap">
        <id property="id" column="id"/>
        <result property="fzx" column="fzx"/>
        <result property="kh" column="kh"/>
        <result property="allprice" column="allprice"/>
        <result property="zk" column="zk"/>
        <result property="sj" column="sj"/>
        <result property="items" column="items"/>
        <result property="sellman" column="sellman"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectSellOutsideVo">
        select id,
               fzx,
               kh,
               allprice,
               zk,
               sj,
               items,
               sellman,
               createdate,
               modifydate
        from crm_sell_outside
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="SellOutsideMap">
        <include refid="selectSellOutsideVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="SellOutsideMap">
        <include refid="selectSellOutsideVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

