<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.common.dao.MdVisitWriteMapper">

    <resultMap type="com.center.medical.datamove.common.bean.model.MdVisitWrite" id="MdVisitWriteMap">
        <id property="id" column="id"/>
        <result property="satisfactionId" column="satisfaction_id"/>
        <result property="visitResult" column="visit_result"/>
        <result property="visitLevel" column="visit_level"/>
        <result property="visitterId" column="visitter_id"/>
        <result property="visitTime" column="visit_time"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
        <result property="memo" column="memo"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectMdVisitWriteVo">
        select id,
               satisfaction_id,
               visit_result,
               visit_level,
               visitter_id,
               visit_time,
               createdate,
               modifydate,
               memo
        from md_visit_write
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="MdVisitWriteMap">
        <include refid="selectMdVisitWriteVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="MdVisitWriteMap">
        <include refid="selectMdVisitWriteVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

