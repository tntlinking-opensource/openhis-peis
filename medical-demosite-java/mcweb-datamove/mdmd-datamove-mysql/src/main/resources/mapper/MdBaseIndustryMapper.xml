<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.common.dao.MdBaseIndustryMapper">

    <resultMap type="com.center.medical.datamove.common.bean.model.MdBaseIndustry" id="MdBaseIndustryMap">
        <id property="id" column="id"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
        <result property="category" column="category"/>
        <result property="major" column="major"/>
        <result property="middle" column="middle"/>
        <result property="sub" column="sub"/>
        <result property="arrangement" column="arrangement"/>
        <result property="interfaceCode" column="interface_code"/>
        <result property="isDelete" column="is_delete"/>
        <result property="industryName" column="industry_name"/>
        <result property="illustration" column="illustration"/>
        <result property="industryCode" column="industry_code"/>
        <result property="idx" column="idx"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectMdBaseIndustryVo">
        select id,
               createdate,
               modifydate,
               category,
               major,
               middle,
               sub,
               arrangement,
               interface_code,
               is_delete,
               industry_name,
               illustration,
               industry_code,
               idx
        from md_base_industry
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="MdBaseIndustryMap">
        <include refid="selectMdBaseIndustryVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="MdBaseIndustryMap">
        <include refid="selectMdBaseIndustryVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

