<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.common.dao.MdBaseAdiconExamItemCodeMapper">

    <resultMap type="com.center.medical.datamove.common.bean.model.MdBaseAdiconExamItemCode"
               id="MdBaseAdiconExamItemCodeMap">
        <id property="id" column="id"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
        <result property="itemCode" column="item_code"/>
        <result property="itemName" column="item_name"/>
        <result property="inputCode" column="input_code"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectMdBaseAdiconExamItemCodeVo">
        select id, createdate, modifydate, item_code, item_name, input_code
        from md_base_adicon_exam_item_code
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="MdBaseAdiconExamItemCodeMap">
        <include refid="selectMdBaseAdiconExamItemCodeVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="MdBaseAdiconExamItemCodeMap">
        <include refid="selectMdBaseAdiconExamItemCodeVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

