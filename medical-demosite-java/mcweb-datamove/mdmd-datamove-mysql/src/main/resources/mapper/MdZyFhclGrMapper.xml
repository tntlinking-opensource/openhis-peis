    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="MdZyFhclGrMap">
        <include refid="selectMdZyFhclGrVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

