<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.common.dao.MdSamplePersonMapper">

    <resultMap type="com.center.medical.datamove.common.bean.model.MdSamplePerson" id="MdSamplePersonMap">
        <id property="id" column="id"/>
        <result property="ballCheckId" column="ball_check_id"/>
        <result property="patientcode" column="patientcode"/>
        <result property="groupId" column="group_id"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
        <result property="patientId" column="patient_id"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectMdSamplePersonVo">
        select id, ball_check_id, patientcode, group_id, createdate, modifydate, patient_id
        from md_sample_person
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="MdSamplePersonMap">
        <include refid="selectMdSamplePersonVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="MdSamplePersonMap">
        <include refid="selectMdSamplePersonVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

