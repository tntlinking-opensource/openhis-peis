<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.common.dao.CrmOrderConflictMapper">

    <resultMap type="com.center.medical.datamove.common.bean.model.CrmOrderConflict" id="CrmOrderConflictMap">
        <id property="id" column="id"/>
        <result property="ddId" column="dd_id"/>
        <result property="rate" column="rate"/>
        <result property="planIds" column="plan_ids"/>
        <result property="dealResult" column="deal_result"/>
        <result property="passPlanId" column="pass_plan_id"/>
        <result property="rejectPlanId" column="reject_plan_id"/>
        <result property="dealerId" column="dealer_id"/>
        <result property="dealerName" column="dealer_name"/>
        <result property="remark" column="remark"/>
        <result property="baranchId" column="baranch_id"/>
        <result property="status" column="status"/>
        <result property="dealDate" column="deal_date"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectCrmOrderConflictVo">
        select id,
               dd_id,
               rate,
               plan_ids,
               deal_result,
               pass_plan_id,
               reject_plan_id,
               dealer_id,
               dealer_name,
               remark,
               baranch_id,
               status,
               deal_date,
               createdate,
               modifydate
        from crm_order_conflict
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="CrmOrderConflictMap">
        <include refid="selectCrmOrderConflictVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="CrmOrderConflictMap">
        <include refid="selectCrmOrderConflictVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

