<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.common.dao.MdFxSummaryMapper">

    <resultMap type="com.center.medical.datamove.common.bean.model.MdFxSummary" id="MdFxSummaryMap">
        <id property="id" column="id"/>
        <result property="sampleId" column="sample_id"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
        <result property="regimentationNote" column="regimentation_note"/>
        <result property="harmName" column="harm_name"/>
        <result property="harmId" column="harm_id"/>
        <result property="orgDepart" column="org_depart"/>
        <result property="yszyb" column="yszyb"/>
        <result property="zyjjz" column="zyjjz"/>
        <result property="fc" column="fc"/>
        <result property="qtjb" column="qtjb"/>
        <result property="wjyc" column="wjyc"/>
        <result property="classId" column="class_id"/>
        <result property="className" column="class_name"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectMdFxSummaryVo">
        select id,
               sample_id,
               createdate,
               modifydate,
               regimentation_note,
               harm_name,
               harm_id,
               org_depart,
               yszyb,
               zyjjz,
               fc,
               qtjb,
               wjyc,
               class_id,
               class_name
        from md_fx_summary
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="MdFxSummaryMap">
        <include refid="selectMdFxSummaryVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="MdFxSummaryMap">
        <include refid="selectMdFxSummaryVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

