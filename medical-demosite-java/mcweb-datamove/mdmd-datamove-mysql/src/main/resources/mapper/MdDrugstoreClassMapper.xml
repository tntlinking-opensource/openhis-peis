<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.common.dao.MdDrugstoreClassMapper">

    <resultMap type="com.center.medical.datamove.common.bean.model.MdDrugstoreClass" id="MdDrugstoreClassMap">
        <id property="id" column="id"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
        <result property="classCode" column="class_code"/>
        <result property="className" column="class_name"/>
        <result property="shortCode" column="short_code"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectMdDrugstoreClassVo">
        select id, createdate, modifydate, class_code, class_name, short_code
        from md_drugstore_class
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="MdDrugstoreClassMap">
        <include refid="selectMdDrugstoreClassVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="MdDrugstoreClassMap">
        <include refid="selectMdDrugstoreClassVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

