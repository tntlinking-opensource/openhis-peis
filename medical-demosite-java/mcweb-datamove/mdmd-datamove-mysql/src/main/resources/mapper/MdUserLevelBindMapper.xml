<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.common.dao.MdUserLevelBindMapper">

    <resultMap type="com.center.medical.datamove.common.bean.model.MdUserLevelBind" id="MdUserLevelBindMap">
        <id property="userLevelId" column="user_level_id"/>
        <result property="userId" column="user_id"/>
        <result property="levelId" column="level_id"/>
        <result property="levelName" column="level_name"/>
        <result property="fromType" column="from_type"/>
        <result property="branchId" column="branch_id"/>
        <result property="amount" column="amount"/>
        <result property="applyId" column="apply_id"/>
        <result property="term" column="term"/>
        <result property="termType" column="term_type"/>
        <result property="img" column="img"/>
        <result property="discountType" column="discount_type"/>
        <result property="discount" column="discount"/>
        <result property="presScore" column="pres_score"/>
        <result property="rateScore" column="rate_score"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectMdUserLevelBindVo">
        select user_level_id,
               user_id,
               level_id,
               level_name,
               from_type,
               branch_id,
               amount,
               apply_id,
               term,
               term_type,
               img,
               discount_type,
               discount,
               pres_score,
               rate_score,
               createdate,
               modifydate
        from md_user_level_bind
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="MdUserLevelBindMap">
        <include refid="selectMdUserLevelBindVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="MdUserLevelBindMap">
        <include refid="selectMdUserLevelBindVo"/>
        <where>
            userLevelId = #{id}
        </where>
    </select>

</mapper>

