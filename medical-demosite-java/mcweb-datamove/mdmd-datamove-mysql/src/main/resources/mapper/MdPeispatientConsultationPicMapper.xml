<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.common.dao.MdPeispatientConsultationPicMapper">

    <resultMap type="com.center.medical.datamove.common.bean.model.MdPeispatientConsultationPic"
               id="MdPeispatientConsultationPicMap">
        <id property="id" column="id"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
        <result property="patientcode" column="patientcode"/>
        <result property="signPicture" column="sign_picture"/>
        <result property="datecreated" column="datecreated"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectMdPeispatientConsultationPicVo">
        select id, createdate, modifydate, patientcode, sign_picture, datecreated
        from md_peispatient_consultation_pic
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="MdPeispatientConsultationPicMap">
        <include refid="selectMdPeispatientConsultationPicVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="MdPeispatientConsultationPicMap">
        <include refid="selectMdPeispatientConsultationPicVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

