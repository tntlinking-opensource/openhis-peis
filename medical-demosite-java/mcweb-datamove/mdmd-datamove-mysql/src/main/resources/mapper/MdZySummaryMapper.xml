<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.common.dao.MdZySummaryMapper">

    <resultMap type="com.center.medical.datamove.common.bean.model.MdZySummary" id="MdZySummaryMap">
        <id property="id" column="id"/>
        <result property="serialNo" column="serial_no"/>
        <result property="occupationSummaryCode" column="occupation_summary_code"/>
        <result property="occupationSummary" column="occupation_summary"/>
        <result property="printForShort" column="print_for_short"/>
        <result property="occupationSummaryExplain" column="occupation_summary_explain"/>
        <result property="inputCode" column="input_code"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
        <result property="isDelete" column="is_delete"/>
        <result property="sort" column="sort"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectMdZySummaryVo">
        select id,
               serial_no,
               occupation_summary_code,
               occupation_summary,
               print_for_short,
               occupation_summary_explain,
               input_code,
               createdate,
               modifydate,
               is_delete,
               sort
        from md_zy_summary
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="MdZySummaryMap">
        <include refid="selectMdZySummaryVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="MdZySummaryMap">
        <include refid="selectMdZySummaryVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

