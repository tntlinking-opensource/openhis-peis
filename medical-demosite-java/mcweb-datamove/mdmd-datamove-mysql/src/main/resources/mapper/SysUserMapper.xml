<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.common.dao.SysUserMapper">

    <resultMap type="com.center.medical.datamove.common.bean.model.SysUser" id="SysUserMap">
        <id property="userId" column="user_id"/>
        <result property="deptId" column="dept_id"/>
        <result property="userName" column="user_name"/>
        <result property="nickName" column="nick_name"/>
        <result property="userType" column="user_type"/>
        <result property="email" column="email"/>
        <result property="phonenumber" column="phonenumber"/>
        <result property="sex" column="sex"/>
        <result property="avatar" column="avatar"/>
        <result property="password" column="password"/>
        <result property="sdiscount" column="sdiscount"/>
        <result property="ldiscount" column="ldiscount"/>
        <result property="isleader" column="isleader"/>
        <result property="cid" column="cid"/>
        <result property="status" column="status"/>
        <result property="inputCode" column="input_code"/>
        <result property="reciveCode" column="recive_code"/>
        <result property="isDoc" column="is_doc"/>
        <result property="userCode" column="user_code"/>
        <result property="picture" column="picture"/>
        <result property="signPic" column="sign_pic"/>
        <result property="superiorId" column="superior_id"/>
        <result property="isbj" column="isbj"/>
        <result property="secretPassword" column="secret_password"/>
        <result property="delFlag" column="del_flag"/>
        <result property="loginIp" column="login_ip"/>
        <result property="loginDate" column="login_date"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="expDate" column="exp_date"/>
        <result property="lockDate" column="lock_date"/>
        <result property="unlockDate" column="unlock_date"/>
        <result property="remark" column="remark"/>
        <result property="kingdeeUseStatus" column="kingdee_use_status"/>
        <result property="kingdeeAccountNo" column="kingdee_account_no"/>
        <result property="entryDate" column="entry_date"/>
        <result property="userNo" column="user_no"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectSysUserVo">
        select user_id,
               dept_id,
               user_name,
               nick_name,
               user_type,
               email,
               phonenumber,
               sex,
               avatar,
               password,
               sdiscount,
               ldiscount,
               isleader,
               cid,
               status,
               input_code,
               recive_code,
               is_doc,
               user_code,
               picture,
               sign_pic,
               superior_id,
               isbj,
               secret_password,
               del_flag,
               login_ip,
               login_date,
               create_by,
               create_time,
               update_by,
               update_time,
               exp_date,
               lock_date,
               unlock_date,
               remark,
               kingdee_use_status,
               kingdee_account_no,
               entry_date,
               user_no
        from sys_user
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="SysUserMap">
        <include refid="selectSysUserVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="SysUserMap">
        <include refid="selectSysUserVo"/>
        <where>
            userId = #{id}
        </where>
    </select>

</mapper>

