<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.common.dao.SysRoleDeptMapper">

    <resultMap type="com.center.medical.datamove.common.bean.model.SysRoleDept" id="SysRoleDeptMap">
        <id property="roleId" column="role_id"/>
        <result property="deptId" column="dept_id"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectSysRoleDeptVo">
        select role_id, dept_id
        from sys_role_dept
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="SysRoleDeptMap">
        <include refid="selectSysRoleDeptVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="SysRoleDeptMap">
        <include refid="selectSysRoleDeptVo"/>
        <where>
            roleId = #{id}
        </where>
    </select>

</mapper>

