<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.common.dao.MdChestMapper">

    <resultMap type="com.center.medical.datamove.common.bean.model.MdChest" id="MdChestMap">
        <id property="id" column="id"/>
        <result property="tjlx" column="tjlx"/>
        <result property="ddh" column="ddh"/>
        <result property="gzh" column="gzh"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
        <result property="note" column="note"/>
        <result property="dwmc" column="dwmc"/>
        <result property="isDelete" column="is_delete"/>
        <result property="chestNum" column="chest_num"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectMdChestVo">
        select id,
               tjlx,
               ddh,
               gzh,
               createdate,
               modifydate,
               note,
               dwmc,
               is_delete,
               chest_num
        from md_chest
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="MdChestMap">
        <include refid="selectMdChestVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="MdChestMap">
        <include refid="selectMdChestVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

