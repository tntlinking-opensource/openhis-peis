<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.common.dao.MdSectionAndRemindMapper">

    <resultMap type="com.center.medical.datamove.common.bean.model.MdSectionAndRemind" id="MdSectionAndRemindMap">
        <id property="id" column="id"/>
        <result property="createdate" column="createdate"/>
        <result property="modifydate" column="modifydate"/>
        <result property="remindId" column="remind_id"/>
        <result property="depId" column="dep_id"/>
        <result property="patientcode" column="patientcode"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectMdSectionAndRemindVo">
        select id, createdate, modifydate, remind_id, dep_id, patientcode
        from md_section_and_remind
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="MdSectionAndRemindMap">
        <include refid="selectMdSectionAndRemindVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="MdSectionAndRemindMap">
        <include refid="selectMdSectionAndRemindVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

