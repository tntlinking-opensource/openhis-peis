<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.oracle.dao.SellRemindMapper">

    <resultMap type="com.center.medical.datamove.oracle.bean.model.SellRemind" id="SellRemindMap">
        <id property="id" column="ID"/>
        <result property="createdate" column="CREATEDATE"/>
        <result property="modifydate" column="MODIFYDATE"/>
        <result property="khdwid" column="KHDWID"/>
        <result property="khdwmc" column="KHDWMC"/>
        <result property="remindTime" column="REMIND_TIME"/>
        <result property="content" column="CONTENT"/>
        <result property="createName" column="CREATE_NAME"/>
        <result property="status" column="STATUS"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectSellRemindVo">
        select ID,
               CREATEDATE,
               MODIFYDATE,
               KHDWID,
               KHDWMC,
               REMIND_TIME,
               CONTENT,
               CREATE_NAME,
               STATUS
        from SELL_REMIND
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="SellRemindMap">
        <include refid="selectSellRemindVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="SellRemindMap">
        <include refid="selectSellRemindVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

