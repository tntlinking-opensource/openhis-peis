<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.oracle.dao.OperateLogMapper">

    <resultMap type="com.center.medical.datamove.oracle.bean.model.OperateLog" id="OperateLogMap">
        <id property="id" column="ID"/>
        <result property="createdate" column="CREATEDATE"/>
        <result property="modifydate" column="MODIFYDATE"/>
        <result property="operator" column="OPERATOR"/>
        <result property="method" column="METHOD"/>
        <result property="note" column="NOTE"/>
        <result property="opType" column="OP_TYPE"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectOperateLogVo">
        select ID, CREATEDATE, MODIFYDATE, OPERATOR, METHOD, NOTE, OP_TYPE
        from OPERATE_LOG
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="OperateLogMap">
        <include refid="selectOperateLogVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="OperateLogMap">
        <include refid="selectOperateLogVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

