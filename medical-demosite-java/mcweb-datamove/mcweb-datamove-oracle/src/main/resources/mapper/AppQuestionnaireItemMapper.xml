<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.oracle.dao.AppQuestionnaireItemMapper">

    <resultMap type="com.center.medical.datamove.oracle.bean.model.AppQuestionnaireItem" id="AppQuestionnaireItemMap">
        <id property="id" column="ID"/>
        <result property="createdate" column="CREATEDATE"/>
        <result property="modifydate" column="MODIFYDATE"/>
        <result property="appUserQuestionnaireId" column="APP_USER_QUESTIONNAIRE_ID"/>
        <result property="itemId" column="ITEM_ID"/>
        <result property="isQuestionRecommend" column="IS_QUESTION_RECOMMEND"/>
        <result property="isDoctorRecommend" column="IS_DOCTOR_RECOMMEND"/>
        <result property="isPaid" column="IS_PAID"/>
        <result property="doctorReason" column="DOCTOR_REASON"/>
        <result property="isBase" column="IS_BASE"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectAppQuestionnaireItemVo">
        select ID,
               CREATEDATE,
               MODIFYDATE,
               APP_USER_QUESTIONNAIRE_ID,
               ITEM_ID,
               IS_QUESTION_RECOMMEND,
               IS_DOCTOR_RECOMMEND,
               IS_PAID,
               DOCTOR_REASON,
               IS_BASE
        from APP_QUESTIONNAIRE_ITEM
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="AppQuestionnaireItemMap">
        <include refid="selectAppQuestionnaireItemVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="AppQuestionnaireItemMap">
        <include refid="selectAppQuestionnaireItemVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

