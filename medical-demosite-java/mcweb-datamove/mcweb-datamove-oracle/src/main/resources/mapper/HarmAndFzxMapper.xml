<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.oracle.dao.HarmAndFzxMapper">

    <resultMap type="com.center.medical.datamove.oracle.bean.model.HarmAndFzx" id="HarmAndFzxMap">
        <id property="id" column="ID"/>
        <result property="createdate" column="CREATEDATE"/>
        <result property="modifydate" column="MODIFYDATE"/>
        <result property="harmId" column="HARM_ID"/>
        <result property="fzxId" column="FZX_ID"/>
        <result property="tbzt" column="TBZT"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectHarmAndFzxVo">
        select ID, CREATEDATE, MODIFYDATE, HARM_ID, FZX_ID, TBZT
        from HARM_AND_FZX
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="HarmAndFzxMap">
        <include refid="selectHarmAndFzxVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="HarmAndFzxMap">
        <include refid="selectHarmAndFzxVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

