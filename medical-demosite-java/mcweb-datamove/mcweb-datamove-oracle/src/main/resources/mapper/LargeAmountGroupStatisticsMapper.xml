<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.oracle.dao.LargeAmountGroupStatisticsMapper">

    <resultMap type="com.center.medical.datamove.oracle.bean.model.LargeAmountGroupStatistics"
               id="LargeAmountGroupStatisticsMap">
        <id property="id" column="ID"/>
        <result property="createdate" column="CREATEDATE"/>
        <result property="modifydate" column="MODIFYDATE"/>
        <result property="year" column="YEAR"/>
        <result property="money" column="MONEY"/>
        <result property="orgId" column="ORG_ID"/>
        <result property="salesmanUsername" column="SALESMAN_USERNAME"/>
        <result property="orderCount" column="ORDER_COUNT"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectLargeAmountGroupStatisticsVo">
        select ID, CREATEDATE, MODIFYDATE, YEAR, MONEY, ORG_ID, SALESMAN_USERNAME, ORDER_COUNT
        from LARGE_AMOUNT_GROUP_STATISTICS
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="LargeAmountGroupStatisticsMap">
        <include refid="selectLargeAmountGroupStatisticsVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="LargeAmountGroupStatisticsMap">
        <include refid="selectLargeAmountGroupStatisticsVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

