<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.oracle.dao.AppAreaMapper">

    <resultMap type="com.center.medical.datamove.oracle.bean.model.AppArea" id="AppAreaMap">
        <id property="id" column="ID"/>
        <result property="createdate" column="CREATEDATE"/>
        <result property="modifydate" column="MODIFYDATE"/>
        <result property="areaName" column="AREA_NAME"/>
        <result property="pid" column="PID"/>
        <result property="fullName" column="FULL_NAME"/>
        <result property="areaSort" column="AREA_SORT"/>
        <result property="stopFlag" column="STOP_FLAG"/>
        <result property="levels" column="LEVELS"/>
        <result property="areaCode" column="AREA_CODE"/>
        <result property="areaDesc" column="AREA_DESC"/>
        <result property="latitude" column="LATITUDE"/>
        <result property="longitude" column="LONGITUDE"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectAppAreaVo">
        select ID,
               CREATEDATE,
               MODIFYDATE,
               AREA_NAME,
               PID,
               FULL_NAME,
               AREA_SORT,
               STOP_FLAG,
               LEVELS,
               AREA_CODE,
               AREA_DESC,
               LATITUDE,
               LONGITUDE
        from APP_AREA
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="AppAreaMap">
        <include refid="selectAppAreaVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="AppAreaMap">
        <include refid="selectAppAreaVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

