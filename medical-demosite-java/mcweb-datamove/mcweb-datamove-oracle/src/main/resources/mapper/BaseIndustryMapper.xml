<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.oracle.dao.BaseIndustryMapper">

    <resultMap type="com.center.medical.datamove.oracle.bean.model.BaseIndustry" id="BaseIndustryMap">
        <id property="id" column="ID"/>
        <result property="createdate" column="CREATEDATE"/>
        <result property="modifydate" column="MODIFYDATE"/>
        <result property="category" column="CATEGORY"/>
        <result property="major" column="MAJOR"/>
        <result property="middle" column="MIDDLE"/>
        <result property="sub" column="SUB"/>
        <result property="arrangement" column="ARRANGEMENT"/>
        <result property="interfaceCode" column="INTERFACE_CODE"/>
        <result property="isDelete" column="IS_DELETE"/>
        <result property="industryName" column="INDUSTRY_NAME"/>
        <result property="illustration" column="ILLUSTRATION"/>
        <result property="industryCode" column="INDUSTRY_CODE"/>
        <result property="idx" column="IDX"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectBaseIndustryVo">
        select ID,
               CREATEDATE,
               MODIFYDATE,
               CATEGORY,
               MAJOR,
               MIDDLE,
               SUB,
               ARRANGEMENT,
               INTERFACE_CODE,
               IS_DELETE,
               INDUSTRY_NAME,
               ILLUSTRATION,
               INDUSTRY_CODE,
               IDX
        from BASE_INDUSTRY
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="BaseIndustryMap">
        <include refid="selectBaseIndustryVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="BaseIndustryMap">
        <include refid="selectBaseIndustryVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

