<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.oracle.dao.DrugDiseaseMapper">

    <resultMap type="com.center.medical.datamove.oracle.bean.model.DrugDisease" id="DrugDiseaseMap">
        <id property="id" column="ID"/>
        <result property="healthEvaluation" column="HEALTH_EVALUATION"/>
        <result property="inputCode" column="INPUT_CODE"/>
        <result property="createdate" column="CREATEDATE"/>
        <result property="modifydate" column="MODIFYDATE"/>
        <result property="typeId" column="TYPE_ID"/>
        <result property="isDelete" column="IS_DELETE"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectDrugDiseaseVo">
        select ID, HEALTH_EVALUATION, INPUT_CODE, CREATEDATE, MODIFYDATE, TYPE_ID, IS_DELETE
        from DRUG_DISEASE
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="DrugDiseaseMap">
        <include refid="selectDrugDiseaseVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="DrugDiseaseMap">
        <include refid="selectDrugDiseaseVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

