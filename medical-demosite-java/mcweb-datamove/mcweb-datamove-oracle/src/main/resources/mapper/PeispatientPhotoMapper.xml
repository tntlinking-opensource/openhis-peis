<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.oracle.dao.PeispatientPhotoMapper">

    <resultMap type="com.center.medical.datamove.oracle.bean.model.PeispatientPhoto" id="PeispatientPhotoMap">
        <id property="id" column="ID"/>
        <result property="createdate" column="CREATEDATE"/>
        <result property="modifydate" column="MODIFYDATE"/>
        <result property="patientcode" column="PATIENTCODE"/>
        <result property="picture" column="PICTURE"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectPeispatientPhotoVo">
        select ID, CREATEDATE, MODIFYDATE, PATIENTCODE, PICTURE
        from PEISPATIENT_PHOTO
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="PeispatientPhotoMap">
        <include refid="selectPeispatientPhotoVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="PeispatientPhotoMap">
        <include refid="selectPeispatientPhotoVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

