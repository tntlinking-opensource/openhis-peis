<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.oracle.dao.AppLaborChargeMapper">

    <resultMap type="com.center.medical.datamove.oracle.bean.model.AppLaborCharge" id="AppLaborChargeMap">
        <id property="id" column="ID"/>
        <result property="createdate" column="CREATEDATE"/>
        <result property="modifydate" column="MODIFYDATE"/>
        <result property="patientbizno" column="PATIENTBIZNO"/>
        <result property="memo" column="MEMO"/>
        <result property="type" column="TYPE"/>
        <result property="amount" column="AMOUNT"/>
        <result property="balance" column="BALANCE"/>
        <result property="appUserId" column="APP_USER_ID"/>
        <result property="patientname" column="PATIENTNAME"/>
        <result property="orgName" column="ORG_NAME"/>
        <result property="examsuiteName" column="EXAMSUITE_NAME"/>
        <result property="numorgresv" column="NUMORGRESV"/>
        <result property="idTjtc" column="ID_TJTC"/>
        <result property="idOrg" column="ID_ORG"/>
        <result property="username" column="USERNAME"/>
        <result property="operator" column="OPERATOR"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectAppLaborChargeVo">
        select ID,
               CREATEDATE,
               MODIFYDATE,
               PATIENTBIZNO,
               MEMO,
               TYPE,
               AMOUNT,
               BALANCE,
               APP_USER_ID,
               PATIENTNAME,
               ORG_NAME,
               EXAMSUITE_NAME,
               NUMORGRESV,
               ID_TJTC,
               ID_ORG,
               USERNAME,
               OPERATOR
        from APP_LABOR_CHARGE
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="AppLaborChargeMap">
        <include refid="selectAppLaborChargeVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="AppLaborChargeMap">
        <include refid="selectAppLaborChargeVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

