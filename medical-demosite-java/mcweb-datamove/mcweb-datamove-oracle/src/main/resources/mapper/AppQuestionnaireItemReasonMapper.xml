<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.oracle.dao.AppQuestionnaireItemReasonMapper">

    <resultMap type="com.center.medical.datamove.oracle.bean.model.AppQuestionnaireItemReason"
               id="AppQuestionnaireItemReasonMap">
        <id property="id" column="ID"/>
        <result property="createdate" column="CREATEDATE"/>
        <result property="modifydate" column="MODIFYDATE"/>
        <result property="questionnaireItemId" column="QUESTIONNAIRE_ITEM_ID"/>
        <result property="comboId" column="COMBO_ID"/>
        <result property="reason" column="REASON"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectAppQuestionnaireItemReasonVo">
        select ID, CREATEDATE, MODIFYDATE, QUESTIONNAIRE_ITEM_ID, COMBO_ID, REASON
        from APP_QUESTIONNAIRE_ITEM_REASON
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="AppQuestionnaireItemReasonMap">
        <include refid="selectAppQuestionnaireItemReasonVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="AppQuestionnaireItemReasonMap">
        <include refid="selectAppQuestionnaireItemReasonVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

