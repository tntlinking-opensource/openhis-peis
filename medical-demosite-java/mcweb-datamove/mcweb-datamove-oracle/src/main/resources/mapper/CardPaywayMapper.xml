<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.oracle.dao.CardPaywayMapper">

    <resultMap type="com.center.medical.datamove.oracle.bean.model.CardPayway" id="CardPaywayMap">
        <id property="id" column="ID"/>
        <result property="idCharge" column="ID_CHARGE"/>
        <result property="moneyamountpaid" column="MONEYAMOUNTPAID"/>
        <result property="moneyamountpaiddate" column="MONEYAMOUNTPAIDDATE"/>
        <result property="idFeecharger" column="ID_FEECHARGER"/>
        <result property="idPayway" column="ID_PAYWAY"/>
        <result property="createdate" column="CREATEDATE"/>
        <result property="modifydate" column="MODIFYDATE"/>
        <result property="note" column="NOTE"/>
        <result property="cardno" column="CARDNO"/>
        <result property="isCharged" column="IS_CHARGED"/>
        <result property="processId" column="PROCESS_ID"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectCardPaywayVo">
        select ID,
               ID_CHARGE,
               MONEYAMOUNTPAID,
               MONEYAMOUNTPAIDDATE,
               ID_FEECHARGER,
               ID_PAYWAY,
               CREATEDATE,
               MODIFYDATE,
               NOTE,
               CARDNO,
               IS_CHARGED,
               PROCESS_ID
        from CARD_PAYWAY
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="CardPaywayMap">
        <include refid="selectCardPaywayVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="CardPaywayMap">
        <include refid="selectCardPaywayVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

