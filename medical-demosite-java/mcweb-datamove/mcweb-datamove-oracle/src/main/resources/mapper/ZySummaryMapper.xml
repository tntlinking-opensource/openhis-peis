<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.oracle.dao.ZySummaryMapper">

    <resultMap type="com.center.medical.datamove.oracle.bean.model.ZySummary" id="ZySummaryMap">
        <id property="id" column="ID"/>
        <result property="serialNo" column="SERIAL_NO"/>
        <result property="occupationSummaryCode" column="OCCUPATION_SUMMARY_CODE"/>
        <result property="occupationSummary" column="OCCUPATION_SUMMARY"/>
        <result property="printForShort" column="PRINT_FOR_SHORT"/>
        <result property="occupationSummaryExplain" column="OCCUPATION_SUMMARY_EXPLAIN"/>
        <result property="inputCode" column="INPUT_CODE"/>
        <result property="createdate" column="CREATEDATE"/>
        <result property="modifydate" column="MODIFYDATE"/>
        <result property="isDelete" column="IS_DELETE"/>
        <result property="sort" column="SORT"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectZySummaryVo">
        select SERIAL_NO,
               OCCUPATION_SUMMARY_CODE,
               OCCUPATION_SUMMARY,
               PRINT_FOR_SHORT,
               OCCUPATION_SUMMARY_EXPLAIN,
               INPUT_CODE,
               ID,
               CREATEDATE,
               MODIFYDATE,
               IS_DELETE,
               SORT
        from ZY_SUMMARY
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="ZySummaryMap">
        <include refid="selectZySummaryVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="ZySummaryMap">
        <include refid="selectZySummaryVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

