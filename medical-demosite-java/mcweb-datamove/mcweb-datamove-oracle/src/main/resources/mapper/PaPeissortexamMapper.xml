<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.oracle.dao.PaPeissortexamMapper">

    <resultMap type="com.center.medical.datamove.oracle.bean.model.PaPeissortexam" id="PaPeissortexamMap">
        <id property="id" column="ID"/>
        <result property="createdate" column="CREATEDATE"/>
        <result property="modifydate" column="MODIFYDATE"/>
        <result property="branchId" column="BRANCH_ID"/>
        <result property="areaId" column="AREA_ID"/>
        <result property="sortNum" column="SORT_NUM"/>
        <result property="sortDate" column="SORT_DATE"/>
        <result property="isOpen" column="IS_OPEN"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectPaPeissortexamVo">
        select ID,
               CREATEDATE,
               MODIFYDATE,
               BRANCH_ID,
               AREA_ID,
               SORT_NUM,
               SORT_DATE,
               IS_OPEN
        from PA_PEISSORTEXAM
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="PaPeissortexamMap">
        <include refid="selectPaPeissortexamVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="PaPeissortexamMap">
        <include refid="selectPaPeissortexamVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

