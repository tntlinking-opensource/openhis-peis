<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.oracle.dao.SectionRemindMapper">

    <resultMap type="com.center.medical.datamove.oracle.bean.model.SectionRemind" id="SectionRemindMap">
        <id property="id" column="ID"/>
        <result property="createdate" column="CREATEDATE"/>
        <result property="modifydate" column="MODIFYDATE"/>
        <result property="patientcode" column="PATIENTCODE"/>
        <result property="remindContent" column="REMIND_CONTENT"/>
        <result property="depId" column="DEP_ID"/>
        <result property="depName" column="DEP_NAME"/>
        <result property="userId" column="USER_ID"/>
        <result property="userName" column="USER_NAME"/>
        <result property="remindTime" column="REMIND_TIME"/>
        <result property="depIds" column="DEP_IDS"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectSectionRemindVo">
        select ID,
               CREATEDATE,
               MODIFYDATE,
               PATIENTCODE,
               REMIND_CONTENT,
               DEP_ID,
               DEP_NAME,
               USER_ID,
               USER_NAME,
               REMIND_TIME,
               DEP_IDS
        from SECTION_REMIND
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="SectionRemindMap">
        <include refid="selectSectionRemindVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="SectionRemindMap">
        <include refid="selectSectionRemindVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

