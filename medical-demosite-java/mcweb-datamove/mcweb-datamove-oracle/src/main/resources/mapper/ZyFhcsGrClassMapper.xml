<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.oracle.dao.ZyFhcsGrClassMapper">

    <resultMap type="com.center.medical.datamove.oracle.bean.model.ZyFhcsGrClass" id="ZyFhcsGrClassMap">
        <id property="id" column="ID"/>
        <result property="defendIndividualClassCode" column="DEFEND_INDIVIDUAL_CLASS_CODE"/>
        <result property="defendIndividualClass" column="DEFEND_INDIVIDUAL_CLASS"/>
        <result property="inputCode" column="INPUT_CODE"/>
        <result property="dbUser" column="DB_USER"/>
        <result property="createdate" column="CREATEDATE"/>
        <result property="modifydate" column="MODIFYDATE"/>
        <result property="isDelete" column="IS_DELETE"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectZyFhcsGrClassVo">
        select ID,
               DEFEND_INDIVIDUAL_CLASS_CODE,
               DEFEND_INDIVIDUAL_CLASS,
               INPUT_CODE,
               DB_USER,
               CREATEDATE,
               MODIFYDATE,
               IS_DELETE
        from ZY_FHCS_GR_CLASS
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="ZyFhcsGrClassMap">
        <include refid="selectZyFhcsGrClassVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="ZyFhcsGrClassMap">
        <include refid="selectZyFhcsGrClassVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

