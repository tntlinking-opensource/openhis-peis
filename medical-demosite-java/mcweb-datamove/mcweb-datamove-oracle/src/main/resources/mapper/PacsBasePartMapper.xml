<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.oracle.dao.PacsBasePartMapper">

    <resultMap type="com.center.medical.datamove.oracle.bean.model.PacsBasePart" id="PacsBasePartMap">
        <id property="id" column="ID"/>
        <result property="createdate" column="CREATEDATE"/>
        <result property="modifydate" column="MODIFYDATE"/>
        <result property="partName" column="PART_NAME"/>
        <result property="inputCode" column="INPUT_CODE"/>
        <result property="partSort" column="PART_SORT"/>
        <result property="pid" column="PID"/>
        <result property="enName" column="EN_NAME"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectPacsBasePartVo">
        select ID,
               CREATEDATE,
               MODIFYDATE,
               PART_NAME,
               INPUT_CODE,
               PART_SORT,
               PID,
               EN_NAME
        from PACS_BASE_PART
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="PacsBasePartMap">
        <include refid="selectPacsBasePartVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="PacsBasePartMap">
        <include refid="selectPacsBasePartVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

