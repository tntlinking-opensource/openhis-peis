<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.oracle.dao.NotifySmsExamMapper">

    <resultMap type="com.center.medical.datamove.oracle.bean.model.NotifySmsExam" id="NotifySmsExamMap">
        <id property="id" column="ID"/>
        <result property="idOrder" column="ID_ORDER"/>
        <result property="ddh" column="DDH"/>
        <result property="idContact" column="ID_CONTACT"/>
        <result property="phone" column="PHONE"/>
        <result property="patientcode" column="PATIENTCODE"/>
        <result property="createer" column="CREATEER"/>
        <result property="fzxid" column="FZXID"/>
        <result property="createdate" column="CREATEDATE"/>
        <result property="modifydate" column="MODIFYDATE"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectNotifySmsExamVo">
        select ID,
               ID_ORDER,
               DDH,
               ID_CONTACT,
               PHONE,
               PATIENTCODE,
               CREATEER,
               FZXID,
               CREATEDATE,
               MODIFYDATE
        from NOTIFY_SMS_EXAM
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="NotifySmsExamMap">
        <include refid="selectNotifySmsExamVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="NotifySmsExamMap">
        <include refid="selectNotifySmsExamVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

