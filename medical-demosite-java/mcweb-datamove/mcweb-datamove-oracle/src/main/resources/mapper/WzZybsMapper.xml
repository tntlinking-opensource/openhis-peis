<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.center.medical.datamove.oracle.dao.WzZybsMapper">

    <resultMap type="com.center.medical.datamove.oracle.bean.model.WzZybs" id="WzZybsMap">
        <id property="id" column="ID"/>
        <result property="djls" column="DJLS"/>
        <result property="idPatientarchive" column="ID_PATIENTARCHIVE"/>
        <result property="amount" column="AMOUNT"/>
        <result property="createDate" column="CREATE_DATE"/>
        <result property="occupationDiseast" column="OCCUPATION_DISEAST"/>
        <result property="diagnosisDate" column="DIAGNOSIS_DATE"/>
        <result property="diagnosisDept" column="DIAGNOSIS_DEPT"/>
        <result property="diagnosisDesc" column="DIAGNOSIS_DESC"/>
        <result property="dbUser" column="DB_USER"/>
        <result property="remark" column="REMARK"/>
        <result property="createdate" column="CREATEDATE"/>
        <result property="modifydate" column="MODIFYDATE"/>
        <result property="createId" column="CREATE_ID"/>
        <result property="modifyId" column="MODIFY_ID"/>
        <result property="status" column="STATUS"/>
    </resultMap>

    <!-- 数据表字段属性 -->
    <sql id="selectWzZybsVo">
        select DJLS,
               ID_PATIENTARCHIVE,
               AMOUNT,
               ID,
               CREATE_DATE,
               OCCUPATION_DISEAST,
               DIAGNOSIS_DATE,
               DIAGNOSIS_DEPT,
               DIAGNOSIS_DESC,
               DB_USER,
               REMARK,
               CREATEDATE,
               MODIFYDATE,
               CREATE_ID,
               MODIFY_ID,
               STATUS
        from WZ_ZYBS
    </sql>

    <!-- 查询列表数据 -->
    <select id="getPage" resultMap="WzZybsMap">
        <include refid="selectWzZybsVo"/>
    </select>

    <!-- 根据主键id获取记录详情 -->
    <select id="getInfoById" resultMap="WzZybsMap">
        <include refid="selectWzZybsVo"/>
        <where>
            id = #{id}
        </where>
    </select>

</mapper>

